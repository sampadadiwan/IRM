<%= turbo_stream_from [@chat, "messages"] %>
<div class="card">
  <div class="card-header">
    <h5 class="card-title">Chat Details <%= @chat.id %></h5>
  </div>
  <div class="card-body">
    <div id="messages">
      <%= render @chat.messages %>
    </div>
      <%= render "chats/chat_box", chat: @chat %>
    </div>
  </div>
</div>