<%
cards_data = [
  {path: nil, stat: money_to_currency(capital_commitment.committed_amount, params), subtitle: "Committed", progress_bar_color: "success"},
  {path: nil, stat: money_to_currency(capital_commitment.call_amount, params), subtitle: "Called", progress_bar_color: "warning"},
  {path: nil, stat: money_to_currency(capital_commitment.collected_amount, params), subtitle: "Collected", progress_bar_color: "danger"},
  {path: nil, stat: money_to_currency(capital_commitment.distribution_amount, params), subtitle: "Distributed", progress_bar_color: "info"}
]
%>

<div class="row">
    <% cards_data.each do |card_data| %>
    
        <%= render(NumberStatsComponent.new(
            path: card_data[:path],
            amount: card_data[:stat],
            subtitle: card_data[:subtitle],
            progress_bar_color: card_data[:progress_bar_color]
        )) %>

    <% end %>
</div>
