      <% investment_opportunity.ci_widgets.each_with_index do |widget, idx| %>
        <% color = "primary" %>
                
        <div class="associated_entity">
          <section class="hero-section position-relative overflow-hidden mb-0 mb-lg-5">
            <div class="container">
              

              <div class="card">
                <div class="card-header d-flex align-items-center">
                  <h4 class="card-title mb-0"><%= widget.title %></h4>
                </div>
                <div class="card-body collapse show">
                  <div class="row align-items-center">
                    <% if widget.image_placement == "Right" %>
                      <%= render "/ci_widgets/media", widget: widget %>
                      <%= render "/ci_widgets/details", widget: widget, color: color %>
                    <% else %>
                      <%= render "/ci_widgets/details", widget: widget, color: color %>
                      <%= render "/ci_widgets/media", widget: widget %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      <% end %>

              