<% if @custom_notification %>

    <%= @custom_notification.body.html_safe %>
    <%= render "/capital_remittances/show", capital_remittance: @capital_remittance, current_user: nil, params: {} if @custom_notification.show_details %>

<% else %>

    <h3>Dear <%= @capital_remittance.investor_name %></h3>

    <p>
        A capital call has been made by the fund <%= @capital_remittance.fund.name %> run by <%= @capital_remittance.entity.name %>
    </p>

    <p>
        <%= @capital_remittance.capital_call.notes&.html_safe %>
    </p>

    <p>
        <%= render "/capital_remittances/show", capital_remittance: @capital_remittance, current_user: nil, params: {} %>
    </p>

<% end %>

<p class="btn btn-outline-primary"><%= link_to 'View Call', capital_remittance_url(@capital_remittance, subdomain: @capital_remittance.entity.sub_domain) if  @custom_notification.nil? || @custom_notification&.show_link %></p>
