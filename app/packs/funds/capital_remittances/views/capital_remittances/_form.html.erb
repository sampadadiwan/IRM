<%= form_with(model: capital_remittance) do |form| %>
  <% if capital_remittance.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(capital_remittance.errors.count, "error") %> prohibited this capital_remittance from being saved:</h2>

      <ul>
        <% capital_remittance.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <%= form.text_field :entity_id, class: "form-control", hidden: true  %>
    <%= form.text_field :fund_id, class: "form-control", hidden: true  %>
    <%= form.text_field :capital_call_id, class: "form-control", hidden: true  %>

  <div class="form-group">
    <%= form.label :investor_id %>
    <%= form.select :investor_id, capital_remittance.fund.investors.map{|i| [i.investor_name, i.id]}  ,{}, class: "form-control", disabled: true  %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, ["Pending", "Paid"], {}, class: "form-control", disabled: true  %>
  </div>

  <div class="form-group">
    <%= form.label :call_amount %>
    <%= form.text_field :call_amount, class: "form-control", disabled: true  %>
  </div>

  <div class="form-group" data-controller="currencyformat">
    <%= form.label :collected_amount %>  <span class="formatted_currency"></span>
    <%= form.text_field :collected_amount, class: "form-control", data: {action: "input->currencyformat#format"}   %>
  </div>


  <div class="form-group">
    
    <%= render "layouts/single_upload", form: form, field_label: "Upload payment proof", 
                            for_model: "capital_remittance", field_name: "payment_proof", 
                            model: capital_remittance %>
    <small class="text-muted"> Upload proof of payment as per the instructions. </small>
  </div>

  <%= custom_form_fields(capital_remittance, form) %>

  <div class="form-group">
    <%= form.label :notes %>
    <%= form.text_area :notes, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.submit "Save", {class: "btn btn-primary"}%>
  </div>
<% end %>
