<div data-controller="remittances"
     data-remittances-filter-src="<%= data_source %>">
  <div class="d-flex align-items-center gap-2">
    <div class="form-group">
      <%= select_tag :status,
        options_for_select(["Paid", "Pending", "Overdue", "Overpaid"], params[:status]),
        id: "status",
        class: "form-control",
        prompt: "Payment Status",
        data: { action: "change->remittances#filter" } %>
    </div>

    <div class="form-group">
      <%= select_tag :verified,
        options_for_select([["Yes", true], ["No", false]], params[:verified]),
        id: "verified",
        class: "form-control",
        prompt: "Verified",
        data: { action: "change->remittances#filter" } %>
    </div>
  </div>
</div>
