<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Portfolio Investments</h1>
  <%= link_to "New Portfolio Investment", new_portfolio_investment_path("portfolio_investment[entity_id]": current_user.entity_id, "portfolio_investment[fund_id]": params[:fund_id]), {class: "btn btn-outline-primary"}  %>
</div>
<div class="table-responsive" data-controller="datatable">
  <table id="portfolio_investments" class="table table-bordered dataTable jqDataTable">
    <thead>
      <tr>
        <th>
          Company Name
        </th>
        <th>
          Investment Date
        </th>
        <th>
          Amount
        </th>
        <th>
          Quantity
        </th>
        <th>
          Cost Per Share
        </th>
        <th>
          FMV
        </th>
        <th>
          Investment Type
        </th>
        <th>
          Notes
        </th>
        <th>
        </th>
      </tr>
    </thead>
    <tbody>
      <% portfolio_investments.each do |portfolio_investment| %>
        <%= render portfolio_investment %>
      <% end %>
    </tbody>
  </table>
</div>
