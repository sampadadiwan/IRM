<%= render ToggleCard.new(title: "#{@fund_formula.name}", css_class: "show_fund_formula", allow_toggle: false) do %>
<table class="table table-bordered dataTable">
  <tr>
    <td>
      Fund
    </td>
    <td>
      <%= link_to @fund_formula.fund %>
    </td>
  </tr>
  <tr>
    <td>
      Name
    </td>
    <td>
      <%= @fund_formula.name %>
    </td>
  </tr>
  <tr>
    <td>
      Roll Up
    </td>
    <td>
      <%= display_boolean @fund_formula.roll_up %>
    </td>
  </tr>
  <tr>
    <td>
      Enabled
    </td>
    <td>
      <%= display_boolean @fund_formula.enabled %>
    </td>
  </tr>
  <tr>
    <td>
      Type
    </td>
    <td>
      <%= @fund_formula.rule_type %>
    </td>
  </tr>
  <tr>
    <td>
      Rule For
    </td>
    <td>
      <%= @fund_formula.rule_for %>
    </td>
  </tr>
  <tr>
    <td>
      Commitment Type
    </td>
    <td>
      <%= @fund_formula.commitment_type %>
    </td>
  </tr>

  <% if @fund_formula.entry_type.present? %>
  <tr>
    <td>
      Type
    </td>
    <td>
      <%= @fund_formula.entry_type %>
    </td>
  </tr>
  <% end %>

  <tr>
    <td>
      Sequence
    </td>
    <td>
      <%= @fund_formula.sequence %>
    </td>
  </tr>
  <tr>
    <td>
      Description
    </td>
    <td>
      <%= @fund_formula.description %>
    </td>
  </tr>
  <tr>
    <td>
      Formula
    </td>
    <td>
      <%= @fund_formula.formula %>
    </td>
  </tr>
</table>

<div>
  <%= link_to "Edit", edit_fund_formula_path(@fund_formula), {class: "btn btn-outline-primary"} if policy(@fund_formula).update? %> 
  <%= button_to "Delete", @fund_formula, method: :delete, class: "btn btn-outline-danger", form_class: "deleteButton", data: {action: "click->confirm#popup", turbo:false} if policy(@fund_formula).destroy? %> 

</div>
<% end %>