<% fund = @fund %>
<%= render "/funds/fund_stats", fund:  %>

<div id="fund-ratios-tab" class="">
    <div id="fund-ratios" class="associated_entity">
    <%= render "/fund_ratios/index", fund: fund,
        lazy_load_data: false, data_source: fund_ratios_path(fund_id: fund.id, all: true, fund_ratios_only: true, latest: true) %>
    </div>
</div>

