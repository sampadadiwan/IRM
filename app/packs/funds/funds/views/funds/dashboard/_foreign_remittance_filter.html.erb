<%= form_tag("/funds/#{fund.id}/report", method: :get, id: "remittance_filter") do %>

  <%= hidden_field_tag :report, "dashboard/foreign_remittances" %>

  <div class="form-group">
    <label for="start_date">From:</label>
    <%= date_field_tag :start_date, start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="end_date">To:</label>
    <%= date_field_tag :end_date, end_date, class: "form-control" %>
  </div>

  <%= submit_tag "Filter", class: "btn btn-outline-primary", id: "submit" %>

<% end %>
