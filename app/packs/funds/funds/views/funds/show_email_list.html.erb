

<% if @unapproved_investor_accesses.present? %>
<div class="card">
    <div class="card-header">
        <h3 class="card-title"> Unapproved Investor Access </h3>
    </div>
    <div class="card-body">
        <%= render "/investor_accesses/table", investor_accesses: @unapproved_investor_accesses %>
    </div>
</div>
<% end %>

