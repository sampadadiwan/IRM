<% if @commitments_wo_access_rights.present? %>
<div class="card">
    <div class="card-header">
        <h3 class="card-title"> Fund Investors without Access Rights</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Investor Name</th>                    
                </tr>
            </thead>
            <tbody>
                <% @commitments_wo_access_rights.each do |capital_commitment| %>
                    <tr>
                        <td><%= link_to capital_commitment.investor %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<% end %>

