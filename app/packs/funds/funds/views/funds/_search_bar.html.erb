<form action="/<%=model_name.pluralize%>/search" class="d-none d-sm-inline-block align-middle" data-turbo-frame="<%=model_name.pluralize%>_frame">
    <div class="input-group">
        <input name="query" type="text" class="form-control bg-light border-0 small" placeholder="Search for..." value="" aria-label="Search" aria-describedby="basic-addon2">
        <input name="fund_id" hidden="hidden" value="<%= params[:fund_id] %>">
        <input name="capital_call_id" hidden="hidden" value="<%= params[:capital_call_id] %>">
        <input name="capital_distribution_id" hidden="hidden" value="<%= params[:capital_distribution_id] %>">

        <input name="owner_id" hidden="hidden" value="<%= params[:owner_id] %>">
        <input name="owner_type" hidden="hidden" value="<%= params[:owner_type] %>">
        <input name="entity_id" hidden="hidden" value="<%= params[:entity_id] %>">

        <div class="input-group-append">
            <button class="btn btn-outline-primary" type="submit">
                <i class="fas fa-search fa-sm"></i>
            </button>
        </div>
    </div>
</form>