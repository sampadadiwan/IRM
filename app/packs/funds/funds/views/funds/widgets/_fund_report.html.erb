<% 
    if args[:report_id].present?
        report = Report.find(args[:report_id]) 

        args[:fund_id] = @fund&.id
        args[:investor_id] = @investor&.id
        args[:parent_name] = @investor&.investor_name
        args[:title] = report.name
        uri = report.url_from(args)

%>

    <%= render(WidgetCardComponent.new(widget: widget, args: args, widget_size: widget.widget_size)) do %>
    
        <turbo-frame id="report_<%=report.id%>" src="<%= uri %>" loading="lazy" target="_top">
        </turbo-frame>
    
    <% end %>

<% end %>