<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Fund Unit Settings</h1>
  <span>
  <%= link_to "New", new_fund_unit_setting_path("fund_unit_setting[fund_id]": params[:fund_id], "fund_unit_setting[entity_id]": current_user.entity_id), {class: "btn btn-outline-primary"}  if params[:fund_id].present? %>
  <%= link_to "Upload",
              new_import_upload_path("import_upload[owner_id]": params[:fund_id],
                  "fund_unit_setting[fund_id]": params[:fund_id],
                  "import_upload[owner_type]": "Fund",
                  "import_upload[import_type]": "FundUnitSetting",
                  "sample_upload": "FUND_UNIT_SETTING_SAMPLE"),
                  { class: "btn btn-outline-primary"}  %>

  </span>
</div>

<%fund_unit_settings_frame = "fund_unit_settings_frame"%>
  <%=render SearchComponent.new(data_source: fund_unit_settings_path( params: params.to_unsafe_h), turbo_frame: fund_unit_settings_frame) %>

<div class="table-responsive">
  <table id="fund_unit_settings" class="table table-bordered dataTable action_table hover">
      <% ransack_table_header = RansackTableHeader.new(FundUnitSetting, q: @q, current_user: current_user, records: fund_unit_settings, turbo_frame: fund_unit_settings_frame) %>
      <%= render ransack_table_header %>
    <tbody>
      <% fund_unit_settings.each do |fund_unit_setting| %>
        <%= render "fund_unit_settings/fund_unit_setting", fund_unit_setting: fund_unit_setting.decorate, columns: ransack_table_header.columns%>
      <% end %>
    </tbody>
  </table>
  <% if fund_unit_settings.present? %>
    <%= page_entries_info fund_unit_settings, entry_name: 'item' %>
    <%= paginate fund_unit_settings, data: {turbo_frame: fund_unit_settings_frame} %>
  <% end %>
</div>

