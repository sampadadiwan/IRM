<%= render "/layouts/alerts" %>
 <div>
      <h1> Fund Ratio - <%= @fund_ratio.name %> </h1>
</div>
<table class="table table-bordered dataTable">
  <tr>
    <td>
      Entity
    </td>
    <td>
      <%= @fund_ratio.entity.name %>
    </td>
  </tr>
  <tr>
    <td>
      Fund
    </td>
    <td>
      <%= @fund_ratio.fund.name %>
    </td>
  </tr>

  <% if @fund_ratio.capital_commitment %>
  <tr>
    <td>
      For
    </td>
    <td>
      <%= link_to @fund_ratio.capital_commitment %>
    </td>
  </tr>
  <% end %>

  <tr>
    <td>
      Name
    </td>
    <td>
      <%= @fund_ratio.name %>
    </td>
  </tr>
  <tr>
    <td>
      Value
    </td>
    <td>
      <%= @fund_ratio.value %>
    </td>
  </tr>
  <tr>
    <td>
      Display Value
    </td>
    <td>
      <%= @fund_ratio.display_value %>
    </td>
  </tr>
  <tr>
    <td>
      On
    </td>
    <td>
      <%= l @fund_ratio.end_date if @fund_ratio.end_date %>
    </td>
  </tr>
  <tr>
    <td>
      Notes
    </td>
    <td>
      <%= @fund_ratio.notes %>
    </td>
  </tr>

  <% if @fund_ratio.cash_flows %>
  <tr>
    <td>
      Cash Flows
    </td>
    <td>
      <% table_options = { table_class: "table table-bordered dataTable" } %>
      <%= Json2table::get_html_table(@fund_ratio.cash_flows, table_options).html_safe %>
    </td>
  </tr>
  <% end %>

</table>
<div>
  <%= link_to "Edit", edit_fund_ratio_path(@fund_ratio), {class: "btn btn-outline-primary"} if policy(@fund_ratio).update? %>
  <%= button_to "Delete", @fund_ratio, method: :delete, class: "btn btn-outline-danger", form_class: "deleteButton", data: {action: "click->confirm#popup", turbo:false}  if policy(@fund_ratio).destroy? %>
</div>
