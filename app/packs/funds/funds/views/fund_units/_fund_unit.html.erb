<tr id="<%= dom_id fund_unit %>">
  <% if params[:cols] == "all" %>
  <td class="hideMobP">
    <%= fund_unit.fund %>
  </td>
  <td class="hideMobP">
    <%= link_to fund_unit.investor %>
  </td>
  <% end %>
  <td>
    <%= link_to fund_unit.unit_type, fund_unit %>
  </td>
  <td class="hideMobP">
    <%= l fund_unit.issue_date if fund_unit.issue_date %>
  </td>
  <td>
    <%= fund_unit.quantity %>
  </td>
  <td>
    <%= fund_unit.price %>
  </td>
  <td class="hideMobP">
    <%= fund_unit.premium %>
  </td>
  <td class="hideMobP">
    <%= money_to_currency fund_unit.total_premium, params %>
  </td>
  <td class="hideMobP">
    <%= fund_unit.reason %>
  </td>
  <td class="hideMobP">
    <%= link_to "Show", fund_unit , {class: "btn btn-outline-primary"}%>
  </td>
</tr>
