<tr id="<%= dom_id fund_unit %>">
  <% if params[:cols] == "all" %>
    <td>
      <%= link_to fund_unit.fund %>
    </td>
    <% if params[:investor_id].blank? %>
      <td>
        <%= link_to fund_unit.investor %>
      </td>
    <% else %>
      <td>
        <%= link_to fund_unit.capital_commitment&.investor_kyc&.full_name %>
      </td>
    <% end %>
  <% end %>
  <td>
    <%= link_to fund_unit.unit_type, fund_unit %>
  </td>
  <td>
    <%= link_to fund_unit.capital_commitment.folio_id, fund_unit.capital_commitment %>
  </td>
  <td>
    <%= l fund_unit.issue_date if fund_unit.issue_date %>
  </td>
  <td>
    <%= fund_unit.quantity %>
  </td>
  <td>
    <%= fund_unit.price %>
  </td>
  <td>
    <%= fund_unit.premium %>
  </td>
  <td>
    <%= money_to_currency fund_unit.amount, params %>
  </td>
  <td>
    <% if fund_unit.owner_type.present? %>
      <%= link_to fund_unit.reason, url_for(controller: fund_unit.owner_type.underscore.pluralize, action: :show, id: fund_unit.owner_id) %>
    <% else %>
      <%= fund_unit.reason %>
    <% end %>
  </td>
  <td>
    <%= link_to "Show", fund_unit, {class: "btn btn-outline-primary"} %>
  </td>
</tr>
