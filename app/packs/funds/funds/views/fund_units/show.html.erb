<%= render "/layouts/alerts" %>
<table class="table table-bordered dataTable">
  <tr>
    <td>
      Fund
    </td>
    <td>
      <%= @fund_unit.fund.name %>
    </td>
  </tr>
  <tr>
    <td>
      Capital Commitment
    </td>
    <td>
      <%= link_to @fund_unit.capital_commitment %>
    </td>
  </tr>
  <tr>
    <td>
      Investor
    </td>
    <td>
      <%= @fund_unit.investor.investor_name %>
    </td>
  </tr>
  <tr>
    <td>
      Unit Type
    </td>
    <td>
      <%= @fund_unit.unit_type %>
    </td>
  </tr>
  <tr>
    <td>
      Quantity
    </td>
    <td>
      <%= @fund_unit.quantity %>
    </td>
  </tr>
  <tr>
    <td>
      Price
    </td>
    <td>
      <%= @fund_unit.price %>
    </td>
  </tr>
  <tr>
    <td>
      Premium
    </td>
    <td>
      <%= @fund_unit.premium %>
    </td>
  </tr>

  <tr>
    <td>
      Premium Paid
    </td>
    <td>
      <%= money_to_currency @fund_unit.total_premium, params %>
    </td>
  </tr>

  <tr>
    <td>
      Issue Date
    </td>
    <td>
      <%= l @fund_unit.issue_date if @fund_unit.issue_date %>
    </td>
  </tr>

  <tr>
    <td>
      Reason
    </td>
    <td>
      <%= @fund_unit.reason %>
    </td>
  </tr>

  <% if @fund_unit.owner %>
  <tr>
    <td>
      <%= @fund_unit.owner_type %>
    </td>
    <td>
      <%= link_to @fund_unit.owner %>
    </td>
  </tr>
  <% end %>

</table>
<div>
  <% if policy(@fund_unit).update? %>
  <%= link_to "Edit", edit_fund_unit_path(@fund_unit), {class: "btn btn-outline-primary"} %> 
  <%= button_to "Delete", @fund_unit, method: :delete, class: "btn btn-outline-danger", form_class: "deleteButton", data: {action: "click->confirm#popup", turbo:false}  %>
  <% end %>
</div>
