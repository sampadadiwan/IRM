
<% if params[:preview].present? || @aggregate_portfolio_investment.show_portfolio && current_user.curr_role.casecmp?("investor") %>
    <%= render "/aggregate_portfolio_investments/preview", aggregate_portfolio_investment: @aggregate_portfolio_investment %>
<% elsif !current_user.curr_role.casecmp?("investor") %>
    <%= render "/aggregate_portfolio_investments/show", aggregate_portfolio_investment: @aggregate_portfolio_investment %>
<% end %>
