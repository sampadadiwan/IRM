<%= render FormCard.new(title: "#{@portfolio_report}") do %>
  <table class="table table-bordered dataTable">
    
    <tr>
      <td>
        Name
      </td>
      <td>
        <%= @portfolio_report.name %>
      </td>
    </tr>
    <tr>
      <td>
        Tags
      </td>
      <td>
        <%= @portfolio_report.tags %>
      </td>
    </tr>
    <tr>
      <td>
        Include Kpi
      </td>
      <td>
        <%= display_boolean @portfolio_report.include_kpi %>
      </td>
    </tr>
    <tr>
      <td>
        Include Portfolio Investments
      </td>
      <td>
        <%= display_boolean @portfolio_report.include_portfolio_investments %>
      </td>
    </tr>
    <tr>
      <td>
        Sections
      </td>
      <td>
        <% @portfolio_report.portfolio_report_sections.each_with_index do |prs, idx| %>
          <div class="nested-fields">
            <div class="field">
              <label>Section <%= idx + 1%>: </label>
              <%= prs.name %>
            </div>
            <div class="field">
              <%= prs.data %>
            </div>
          </div>
        <% end %>
      </td>
    </tr>
  </table>
  <div class="associated_entity">
    <% if policy(@portfolio_report).update? %>
      <%= link_to "Edit", edit_portfolio_report_path(@portfolio_report), {class: "btn btn-outline-primary"} %>
      <%= button_to "Delete", @portfolio_report, method: :delete, class: "btn btn-outline-danger", form_class: "deleteButton", data: {action: "click->confirm#popup", turbo:false}  %>
    <% end %>
  </div>
<% end %>
