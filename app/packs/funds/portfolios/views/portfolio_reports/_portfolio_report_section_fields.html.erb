<div class="nested-fields">

  <hr class="mt-3 mb-3"/>

  <div class="field">
    <%= f.label :name, "Section Name" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :data, "Section Data" %>
    <%= f.text_area :data, class: "form-control" %>
  </div>

  <%= link_to_remove_association "Remove Section", f, class: "btn btn-danger" %>
</div>
