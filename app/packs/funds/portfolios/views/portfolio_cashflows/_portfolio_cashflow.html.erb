<tr id="<%= dom_id portfolio_cashflow %>">
  <td>
    <%= link_to portfolio_cashflow.aggregate_portfolio_investment, aggregate_portfolio_investment_path(portfolio_cashflow.aggregate_portfolio_investment, tab: "cashflows-tab")  %> 

  </td>
  <td>
    <%= l portfolio_cashflow.payment_date %>
  </td>
  <td>
    <%= money_to_currency portfolio_cashflow.amount, params %>
  </td>
  <td>
    <%= portfolio_cashflow.tag %>
  </td>
  <td>
    <%= portfolio_cashflow.instrument %>
  </td>
  <td>
    <%= portfolio_cashflow.notes %>
  </td>
  <td>
    <%= link_to "Show", portfolio_cashflow , {class: "btn btn-outline-primary"}%>
    <%= link_to "Edit", edit_portfolio_cashflow_path(portfolio_cashflow), {class: "btn btn-outline-success"}  if policy(portfolio_cashflow).update? %>
  </td>
</tr>
