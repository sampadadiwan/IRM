<%= render FormCard.new(title: "Instrument : #{investment_instrument&.portfolio_company&.investor_name.presence || 'New'}") do %>

<%= form_with(model: investment_instrument, validate: true) do |form| %>
  <% if investment_instrument.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(investment_instrument.errors.count, "error") %> prohibited this investment_instrument from being saved:</h2>

      <ul>
        <% investment_instrument.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.text_field :entity_id, class: "form-control", hidden: true  %>
  <%= form.text_field :portfolio_company_id, class: "form-control", hidden: true  %>
  <%= form.text_field :back_to, class: "form-control", hidden: true, value: request.referer, name: "back_to" %>


  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control"  %>
  </div>

  <div data-controller="select" data-select-url-value="<%= sub_categories_investment_instruments_path %>"
            data-select-param-value="category">

      <div class="form-group">
        <%= form.label :category %>
        <%= form.select :category, InvestmentInstrument::CATEGORIES.keys.sort, {include_blank: true}, class: 'form-control',
            "data-action": "change->select#change" %>
        <small class="text-muted">Select the category (For SEBI Reports)</small>
      </div>

      <div class="form-group">
        <% sub_categories = @investment_instrument.category.present? ? InvestmentInstrument::CATEGORIES[@investment_instrument.category] : ""  %>
        <%= form.label :sub_category %>
        <%= form.select :sub_category, sub_categories, {include_blank: true}, class: 'form-control', data: { select_target: "select" } %>
        <small class="text-muted">Select the sub category (For SEBI Reports)</small>
      </div>

  </div>

  <div class="form-group">
    <%= form.label :sector %>
    <%= form.select :sector, InvestmentInstrument::SECTORS, {}, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :investment_domicile %>
    <%= form.text_field :investment_domicile, class: "form-control"  %>
  </div>

  <%= custom_form_fields(investment_instrument, form) %>

  <div class="form-group">
    <%= form.submit "Save", {class: "btn btn-outline-primary"}%>
  </div>
<% end %>

<% end %>
