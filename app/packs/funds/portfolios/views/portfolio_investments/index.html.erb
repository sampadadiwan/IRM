<%= render "/layouts/filter", associations: [:investment_instrument], include_template: "/portfolio_investments/group_filter", hidden_fields: {snapshot: params[:snapshot], time_series: params[:time_series], custom_xls_report: params[:custom_xls_report]} %>
<%= render ReportingComponent.new do %>
    <%= turbo_frame_tag with_frame("portfolio_investments_frame"), target: "_top" do %>
        <% if params[:time_series].present? %>
            <%= render "/portfolio_investments/time_series", time_series: @time_series, fields: @fields %>
        <% else %>
            <%= render "/portfolio_investments/index", portfolio_investments: @portfolio_investments %>
        <% end  %>
    <% end %>
<% end %>