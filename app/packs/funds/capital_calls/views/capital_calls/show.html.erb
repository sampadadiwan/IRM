<%= render "/layouts/alerts" %>
<%= render "/capital_calls/show" %>


  <div>
    <% if policy(@capital_call).update? %>
      <%= link_to "Edit" , edit_capital_call_path(@capital_call), {class: "btn btn-primary" } %> |
      <%= button_to "Delete" , @capital_call, method: :delete, class: "btn btn-danger", 
          form_class: "deleteButton", data: {action: "click->confirm#popup" , turbo:false} %>
    
    <% end %>
  </div>

  <%= render "/capital_calls/details", capital_call: @capital_call %>