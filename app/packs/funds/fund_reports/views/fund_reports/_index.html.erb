<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Fund Reports</h1>
  <%= link_to "New Fund Report", new_fund_report_path, {class: "btn btn-outline-primary"}  %>
</div>
<div class="table-responsive" data-controller="fund-reports" data-fund-reports-lazy-load-data-value=<%= lazy_load_data %> data-fund-reports-table-name-value="#fund_reports">

    <% if lazy_load_data %>
        <a class="load_data_link" data-action="click->fund-reports#loadData"><span>Load Data</span></a>
    <% end %>

  <table id="fund_reports" class="table table-bordered dataTable" data-source="/fund_reports">
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Name Of Scheme
        </th>
        <th>
          Start Date
        </th>
        <th>
          End Date
        </th>
        <th>
        </th>
      </tr>
    </thead>
    <tbody>
      
    </tbody>
  </table>
</div>
