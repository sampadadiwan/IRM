<%= render "/layouts/alerts" %>

  <table class="table table-bordered dataTable">

    <tr>
      <td>
        Title
      </td>
      <td>
        <%= @capital_distribution.title %>
      </td>
    </tr>

    <tr>
      <td>
        Completed
      </td>
      <td>
        <%= display_boolean @capital_distribution.completed %>
      </td>
    </tr>

    <tr>
      <td>
        Fund
      </td>
      <td>
        <%= link_to @capital_distribution.fund.name, fund_path(@capital_distribution.fund, tab: "capital-distributions-tab") %>
      </td>
    </tr>
    <tr>
      <td>
        Entity
      </td>
      <td>
        <%= @capital_distribution.entity.name %>
      </td>
    </tr>
    <tr>
      <td>
        Gross Amount
      </td>
      <td>
        <%= money_to_currency @capital_distribution.gross_amount, params %>
      </td>
    </tr>
    <tr>
      <td>
        Carry
      </td>
      <td>
        <%= money_to_currency @capital_distribution.carry, params %>
      </td>
    </tr>

    <tr>
      <td>
        Net Amount
      </td>
      <td>
        <%= money_to_currency @capital_distribution.net_amount, params %>
      </td>
    </tr>
    

    <tr>
      <td>
        Distribution Date
      </td>
      <td>
        <%= l @capital_distribution.distribution_date %>
      </td>
    </tr>

    <tr>
      <td>
        Approved
      </td>
      <td>
        <%= display_boolean @capital_distribution.approved %>
      </td>
    </tr>

    <tr>
      <td>
        Payments Distributed
      </td>
      <td>
        <%= money_to_currency @capital_distribution.distribution_amount, params %>
      </td>
    </tr>
    


  </table>


  <div>
    <% if policy(@capital_distribution).update? %>

      <%= link_to "Edit" , edit_capital_distribution_path(@capital_distribution), {class: "btn btn-primary" } %> 
      
      <%= button_to "Delete" , @capital_distribution, method: :delete, class: "btn btn-danger" ,
        form_class: "deleteButton" , data: {action: "click->confirm#delete" , turbo:false} %>

    <% end %>

    <%= button_to "Approve" , approve_capital_distribution_path(@capital_distribution), method: :post, 
        class: "btn btn-success", form_class: "deleteButton", 
        data: {action: "click->confirm#popup", turbo:false, method: :post, msg: "This will generate all the notifications to your clients"} if policy(@capital_distribution).approve? %>

  </div>

  <input id="click_tab" value="payments-tab" hidden="hidden"/>
  <%= render "/capital_distributions/details", capital_distribution: @capital_distribution %>