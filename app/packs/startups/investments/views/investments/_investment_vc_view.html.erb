<tr id="<%= dom_id investment %>">

    <% if current_user.entity_id==investment.entity_id %>
        <% if investment.investor.is_holdings_entity %>
            <td class="dt-control" data-instrument="<%=investment.investment_instrument%>"
                data-entity="<%=investment.entity_id%>" data-category="<%=investment.category%>"></td>
        <% else %>
            <td class=""></td>
        <% end %>
    <% end %>
    
    <td>
        <%= link_to investment.investor.investor_name, investment.investor %>
    </td>
    <td>
        <%= investment.category %>
    </td>

    <td>
        <%= investment.investment_instrument %>
    </td>
    <td>
        <%= custom_format_number investment.quantity, params %>
    </td>

    <td>
        <% if investment.percentage_holding %>
            <%= investment.percentage_holding %>%
                <% end %>
    </td>
    <td>
        <% if investment.percentage_holding %>
            <%= investment.diluted_percentage %>%
                <% end %>
    </td>


    <td>
        <%= money_to_currency(investment.price, params, true) %>
    </td>
    <td>
        <%= money_to_currency(investment.amount, params) %>
    </td>
    <td>
        <%= link_to "Show" , investment , {class: "btn btn-outline-primary", id: "show_investment_#{investment.id}"}%>
    </td>
</tr>