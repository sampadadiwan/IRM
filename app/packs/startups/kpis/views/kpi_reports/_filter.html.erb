<% 
  @portfolio_company ||= nil 
%>
<%= form_with(model: nil, method: :get, url: "/kpi_reports", id: "kpi_reports_filter",  data: {turbo_frame: "kpi_reports_list"} ) do |form| %>
    
  <input name="portfolio_company_id" value="<%= @portfolio_company&.id %>" hidden="hidden">
  <input name="grid_view" value="true" hidden="hidden">

  <div class="form-group col-md-1">    
    <% months = params[:months].presence %>
    <%= form.label :months, "Period in months" %>
    <%= form.text_field :months, class: "form-control", value: months, style: "width: 50px;" %>        
  </div>

  <div class="form-group col-md-1">    
    <% period = params[:period].presence %>
    <%= form.select :period, KpiReport::PERIODS, {selected: period, include_blank: true}, class: "form-control" %>        
  </div>

  <% if @portfolio_company %>
    <div class="form-group col-md-1">    
      <% entity_id = params[:entity_id] %>
      <%= form.select :entity_id, [[@portfolio_company.name, @portfolio_company.investor_entity_id], [current_user.entity.name, current_user.entity.id], ["All", nil]], {selected: entity_id}, class: "form-control" %>        
    </div>
  <% end %>

  <div class="form-group col-md-1">    
    <%= form.text_field :tag_list, class: "form-control", value: params[:tag_list], placeholder: "Tag" %>        
  </div>

  <%= form.submit "Filter", {class: "btn btn-outline-success", id: "submit"}%>

<% end %>