<%
  @portfolio_company ||= nil
  portfolio_company_id = params[:portfolio_company_id].presence || @portfolio_company&.id
  model ||= current_user
%>
<%= form_with(model: model, method: :get, url: "/kpi_reports", id: "kpi_reports_filter",  data: {turbo_frame: "kpi_reports_budget"} ) do |form| %>

  <input name="portfolio_company_id" value="<%= portfolio_company_id %>" hidden="hidden">
  <input name="budget_view" value="true" hidden="hidden">
  <input name="compound" value="<%=params[:compound]%>" hidden="hidden">
  <input name="all" value="true" hidden="hidden">
  <% form.hidden_field :entity_id, value: current_user.entity_id %>

  <div class="form-group col-md-1">
    <% no_of_periods = params[:num_periods].presence || 2  %>
    <%= form.label :num_periods, "No of Periods" %>
    <%= form.text_field :num_periods, class: "form-control", style: "width: 50px;", name: "num_periods", value: no_of_periods %>
  </div>

  <div class="form-group col-md-1">
    <% category = params[:category].presence %>
    <%= form.select :category, InvestorKpiMapping::CATEGORIES, {selected: category, include_blank: true}, class: "form-control", name: "category" %>
  </div>

  <div class="form-group col-md-1">
    <% units = params[:units].presence %>
    <%= form.select :units, ["Crores", "Lakhs", "Million"], {selected: units, include_blank: true}, class: "form-control", name: "units" %>
  </div>

  <div class="form-group col-md-1">
    <%
      selected_tags = params[:tag_list].is_a?(Array) ? params[:tag_list] : params[:tag_list].split(",").map(&:strip) if params[:tag_list].present?
      selected_tags ||= ["Actual"]
    %>

    <%= form.label :tag_list, "Tags" %>
    <%= form.select :tag_list, current_user.entity.kpi_reports.pluck(:tag_list).uniq, { selected: selected_tags, include_blank: false, include_hidden: false }, class: "form-control select2", name: "tag_list[]", multiple: true, data: { width: "100px" } %>
  </div>

  <%= button_tag type: :submit, class: "btn btn-outline-success", id: "submit" do %>
    <i class="ti ti-filter"></i>
    Filter
  <% end %>

  <button class="btn btn-outline-secondary" data-controller="export-xl"
                      data-action="click->export-xl#export"
                      data-tableid="kpi_reports_budget_grid"
                      data-filename="Comparison">
                <i class="ti ti-table-export"></i> <%= t_common(:export_visible) %>
  </button>

<% end %>