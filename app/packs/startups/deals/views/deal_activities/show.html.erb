<div>
  <%= link_to "Edit", edit_deal_activity_path(@deal_activity), 
      {class: "btn btn-primary"} if policy(@deal_activity).update? %> |
  <%= button_to "Delete", @deal_activity, method: :delete, class: "btn btn-danger", form_class: "deleteButton", 
      data: {action: "click->confirm#popup", turbo:false} if policy(@deal_activity).update?  %>
</div>


<%= render  "/deal_activities/details", deal_activity: @deal_activity %>