
<%= render "/layouts/alerts" %>

<% if params[:kanban].present? %>
  <%= render "/deals/kanban", deal: @deal %>
<% else %>
  <%= render "/deals/show", deal: @deal %>
<% end %>

<% if current_user.entity_id == @deal.entity_id %>
  
  <%= render "/layouts/steps", steps: ["Setup Deal Details", "Upload Deal Docs", "Add Investments", 
          "Customize Deal Steps", "Setup Access Rights", "Start Deal"].freeze %>
          
  
  <%= render "/deals/deal_details", deal: @deal, show_deal: "No"  %>
  
<% else %>

  <% deal_investor = @deal.deal_investors.for(current_user).first %>
  <%= render "deal_investors/deal_investor_details", 
    deal_investor: deal_investor, deal: @deal, show_tranch: true %>
  
<% end %>