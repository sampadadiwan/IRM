<%= form_with(model: form_custom_field) do |form| %>
  <% if form_custom_field.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(form_custom_field.errors.count, "error") %> prohibited this form_custom_field from being saved:</h2>

      <ul>
        <% form_custom_field.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :field_type %>
    <%= form.select :field_type, %w[text_field check_box shirt_sizes], {}, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :required %>
    <%= form.check_box :required, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :form_type_id %>
    <%= form.text_field :form_type_id, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.submit "Save", {class: "btn btn-primary"}%>
  </div>
<% end %>
