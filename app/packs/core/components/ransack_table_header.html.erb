
<%# cache_if(current_user.present?, ["#{@model}Header", entity]) do %>
    <thead>
        <tr>
            <% @columns = @columns.presence || @columns_map %>

        <% @columns.each do |column_name, attribute| %>
            <th>
                <% if attribute.present? && !attribute.starts_with?("custom_field") %>
                <%= sort_link @q, attribute, column_name, data: { turbo_frame: @turbo_frame } %>
                <% else %>
                <%= column_name %>
                <% end %>
            </th>
        <% end %>
        <th>
        <!-- Actions -->
        </th>
    </tr>
</thead>
<%# end %>
