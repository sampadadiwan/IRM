<% cache_if((current_user != nil), ["InvestorHeader", entity]) do %>
    <thead>
        <tr>
            <% @columns = @columns_map %>
            <% @columns.each do |column_name, attribute| %>
                <th>
                    <% if attribute.present? && !attribute.starts_with?("custom_field") %>
                        <%= sort_link @q, attribute, column_name %>
                    <% else %>
                        <%= column_name %>
                    <% end %>
                </th>
            <% end %>
            <th>
                <!-- Actions -->
            </th>
        </tr>
    </thead>
<% end %>
