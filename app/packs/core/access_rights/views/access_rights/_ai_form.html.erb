<%= turbo_frame_tag "new_access_right" do %>
  <div id="toasts" aria-live="polite" aria-atomic="true" style="position: relative;"></div>
  <div class="dynamic_form card shadow mb-4" data-controller="access">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Grant Access</h6>
    </div>
    <div class="card-body">
      <%= form_with(model: access_right, class: "", id: "access_rights_form") do |form| %>
        <% if access_right.errors.any? %>
          <div class="alert alert-danger">
            <h2><%= pluralize(access_right.errors.count, "error") %> prohibited this access_right from being saved:</h2>
            <ul>
              <% access_right.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>


        <div class="form-group" hidden='hidden'>
          <%= form.text_field :owner_id, class: "form-control", hidden: true  %>
          <%= form.text_field :owner_type, class: "form-control", hidden: true  %>
          <%= form.text_field :access_type, class: "form-control", hidden: true  %>
        </div>

        <%
          types = access_right.types
          investor_advisors = current_user.entity.investor_advisors
          users = current_user.entity.employees
        %>
        <div>

          <div class="form-group">
            <%= form.label :access_type %>
            <%= form.select :email_or_cat, types, {}, class: "form-control", 
              name: "email_or_cat", "data-action": "change->access#onChange" %>
          </div>

        </div>

          <div class="form-group" id="category_form_group">
            <%= form.label :access_to_category, "Select Stakeholder Category" %>
            <%= form.select :access_to_category, Investor.INVESTOR_CATEGORIES(current_user.entity),
            {:include_blank=>false, include_hidden: false}, 
            class: "form-control select2-multiple", disabled: "disabled", multiple: "multiple",
            "data-action": "change->access#addErrorCheck"  %>
          </div>

          <div class="form-group" id="tag_form_group">
            <%= form.label :tag_list, "Enter Tags (CSV)" %>
            <%= form.text_field :tag_list, class: "form-control", id: "tag_list" %>
          </div>

        <div>
          
          <div class="form-group" id="metadata_form_group">
              <%= form.label :metadata, "Select All or Self" %>
              <%= form.select :metadata, ["All", "Self"], {}, class: "form-control" %>
          </div>
          
          <% investors = access_right.owner_type == "Entity" ? access_right.owner.investors.not_advisors :  access_right.owner.entity.investors.not_advisors %>
          <div class="form-group" id="investor_form_group">
            <%= form.label :access_to_investor_id, "Select Stakeholder" %>
            <%= form.select :access_to_investor_id, investors.includes(:investor_entity).order("entities.name").map{|c| [c.investor_name, c.id]}, 
              {include_blank: false, include_hidden: false}, class: "form-control select2-multiple", multiple: "multiple", "data-action": "change->access#addErrorCheck" %>
          </div>

        </div>

      <div class="form-group">
          <%= form.label :notify, "Send Notification" %>
          <%= form.check_box :notify, class: "form-check-input"  %>
      </div>

      <div class="form-group">
        <%= form.submit t_common(:save), {class: "btn btn-outline-primary", data: {action: "click->access#checkRequiredFilled"}}%>
        <a class="btn btn-outline-danger", data-action="click->access#close">Close</a>
      </div>
    <% end %>
  </div>
<% end %>
