
    <% folders.each do |folder, children| %>
        <ul id="<%=folder.id%>">

        <li id="folder_<%=folder.id%>">
            <span  class="caret">
            <%= link_to folder.name.truncate(25), documents_path(folder_id: folder.id, entity_id: params[:entity_id], parent_folder_id: params[:parent_folder_id])  %>

               
            </span>
            <%= render "/folders/tree_view", folders: children if children.present? %>                            
        </li>

        </ul>
    <% end %>



