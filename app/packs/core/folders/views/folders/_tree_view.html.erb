
    <% folders.each do |folder, children| %>
        <ul id="<%=folder.id%>">

        <li id="folder_<%=folder.id%>" class="<%= params[:folder_id]&.to_i == folder.id ? 'opened': '' %>">
            <span  class="caret">
            <%= link_to folder.name, documents_path(folder_id: folder.id, entity_id: params[:entity_id], parent_folder_id: params[:parent_folder_id])  %>

               
            </span>
            <%= render "/folders/tree_view", folders: children if children.present? %>                            
        </li>

        </ul>
    <% end %>



