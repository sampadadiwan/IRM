<div class='nested-fields form-row'>
    <div class="form-group col-md-1">
        <%= f.label :position %>
        <%= f.text_field :position, class: "form-control" %>
    </div>

    <div class="form-group col-md-2">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group col-md-1">
        <%= f.label :field_type %>
        <%= f.select :field_type, %w[TextField NumberField TextArea CheckBox Radio Select MultiSelect], {}, class: "form-control" %>
    </div>

    <div class="form-group col-md-1">
        <%= f.label :required %>
        <%= f.check_box :required, class: "form-control" %>
    </div>

    <div class="form-group col-md-2">
        <%= f.label :meta_data %>
        <%= f.text_field :meta_data, class: "form-control" %>
    </div>

    <div class="form-group col-md-2">
        <%= f.label :help_text %>
        <%= f.text_field :help_text, class: "form-control" %>
    </div>

    <div class="form-group col-md-1">    
        <%= f.label :none, "&nbsp;".html_safe %>
        <%= link_to_remove_association "Delete" , f, class: "btn btn-danger" %>
    </div>
</div>