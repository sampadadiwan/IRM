<p style="color: green;text-align: center"><%= notice %></p>

<div class="card shadow mb-4">

   <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary"><%= link_to @entity.name, @entity %></h6>
   </div>

   <div class="card-body">

      <table class="table table-bordered dataTable ">
         <tr>
            <td>
               Logo
            </td>
            <td>
               <% if @entity.logo.present? %>
                  <img class="entity_logo" src="<%= (@entity.logo.url) %>">
               <% end %>
            </td>
         </tr>
         <tr>
            <td>
               Type
            </td>
            <td>
               <%= @entity.entity_type %>
            </td>
         </tr>
         <tr>
            <td>
               Url
            </td>
            <td>
               <%= @entity.url if @entity.url.present? %>
            </td>
         </tr>
         <tr>
            <td>
               Category
            </td>
            <td>
               <%= @entity.category %>
            </td>
         </tr>
         <tr>
            <td>
               Details
            </td>
            <td>
               <%= @entity.details %>
            </td>
         </tr>

         <% if current_user && current_user.entity_id == @entity.id %>
         <tr>
            <td>
               Currency
            </td>
            <td>
               <%= @entity.currency %>
            </td>
         </tr>

         <tr>
            <td>
               Sub Domain
            </td>
            <td>
               <%= @entity.sub_domain %>
            </td>
         </tr>

         <% if @entity.enable_kycs %>
         <tr>
            <td>
               KYC Document List (Individual)
            </td>
            <td>
               <%= @entity.entity_setting.individual_kyc_doc_list %>
            </td>
         </tr>

         <tr>
            <td>
               KYC Document List (Non Individual)
            </td>
            <td>
               <%= @entity.entity_setting.non_individual_kyc_doc_list %>
            </td>
         </tr>
         <% end %>

         <% if @entity.enable_kpis %>
         <tr>
            <td>
               KPI Document List
            </td>
            <td>
               <%= @entity.entity_setting.kpi_doc_list %>
            </td>
         </tr>
         <% end %>

         <tr>
            <td>
               Sandbox
            </td>
            <td>
               <%= display_boolean @entity.entity_setting.sandbox %>
            </td>
         </tr>

         <tr>
            <td>
               Sandbox Emails
            </td>
            <td>
               <%= @entity.entity_setting.sandbox_emails %>
            </td>
         </tr>

         <tr>
            <td>
               cc Emails
            </td>
            <td>
               <%= @entity.entity_setting.cc %>
            </td>
         </tr>

         <tr>
            <td>
               Sandbox Numbers
            </td>
            <td>
               <%= @entity.entity_setting.sandbox_numbers %>
            </td>
         </tr>

         <tr>
            <td>
               Access Enabled
            </td>
            <td>
               <%= "Documents," if @entity.enable_documents %>
               <%= "Deals," if @entity.enable_deals %>
               <%= "Investments," if @entity.enable_investments %>
               <%= "Holdings," if @entity.enable_holdings %>
               <%= "Secondary Sale," if @entity.enable_secondary_sale %>
            </td>
         </tr>

         <% end %>

      </table>
      <div>
         <% if policy(@entity).edit? %>
            <%= link_to "Edit", edit_entity_path(@entity), {class: "btn btn-outline-primary"} %>
            <%= link_to "View Payments", payments_path, {class: "btn btn-outline-success"} if @entity.entity_type == "Company" %>
         <% end %>

         <%
            investor = Investor.where( entity_id: @entity.id,
                                    investor_entity_id: current_user.entity_id).first
            if investor.present?
         %>
            <%= button_to "Request Access",
                  request_access_investor_accesses_path("investor_access[investor_id]": investor.id),
                  class: "btn btn-outline-success" %>

         <% end %>

      </div>
   </div>
</div>

