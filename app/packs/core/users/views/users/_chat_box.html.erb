<div id="chat_box">
    <%= form_with url: chat_users_path, method: :post, local: true do |form| %>
    <div class="input-group">
        <%= form.text_field :query, class: "form-control", placeholder: "Type your message...", required: true %>
        <div class="input-group-append">
        <%= form.submit "Send", class: "btn btn-primary" %>
        </div>
    </div>
    <% end %>
</div>