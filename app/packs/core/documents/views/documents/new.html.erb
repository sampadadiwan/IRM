<%= render "/layouts/alerts" %>
<% if @document.owner && @document.owner.document_list.present? %>
  <div class="row">
    <div class="col-lg-7 mb-4">
      <%= render "form", document: @document %>
    </div>
    <div class="col-lg-5 mb-4">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">
            Documents To Upload
          </h6>
        </div>
        <div class="card-body">
            <table class="table table-bordered  dataTable">
                <% (@document.owner.document_list - ["Other"]).each do |name| %>
                  <tr>
                      <td><%= name %></td>
                  </tr>
                <% end %>

                <% if @document.entity.entity_setting.kyc_docs_note.present? %>
                  <tr>
                      <td><%= @document.entity.entity_setting.kyc_docs_note.html_safe %></td>
                  </tr>
                <% end %>
                
            </table>
        </div>
      </div>
    </div>
  <% else %>
    <div>
      <%= render NewCard.new do %>
        <%= render "form", document: @document %>
      <% end %>
    </div>
  <% end %>
