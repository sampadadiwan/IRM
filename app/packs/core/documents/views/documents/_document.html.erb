<tr id="document_<%= document.id %>">
  <td>
      <%= link_to document.name, document_path(document.id) %>
      <% if document.orignal %>
          <%= link_to document.file_url(), class: "document_download_icon", target: "_blank" do %>
            <i class="fas fa-download"></i>
          <% end %>          
      <% end %>
  </td>  
  <td class="hideMobP">
    <%= document.tag_list %>
    <%= document.owner_tag %>
  </td>  

  <td class="hideMobP">
    <%= document.folder_full_path.truncate(80) %>  
    <% if belongs_to_entity_id?(current_user, document.entity_id) %>  
      <span class="float-right">
        <%= link_to "View Docs", folder_documents_path(folder_id: document.folder_id), 
                                  class: "badge badge-primary" %>
        <%= link_to "View Folder", folder_path(id: document.folder_id),
                                class: "badge badge-success" %>  
      </span>
    <% end %>
  </td>

  <td>
    <%= link_to "Show", document, class: "btn btn-outline-primary" %>
  </td>

</tr>
