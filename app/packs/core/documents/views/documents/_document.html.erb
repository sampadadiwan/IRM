<tr id="document_<%= document.id %>">
  <td>
      <%= link_to document.name, document_path(document.id) %>
      <% if document.orignal && policy(document).not_generated_or_approved %>
          <%= link_to document.file_url(), class: "document_download_icon", target: "_blank" do %>
            <i class="fas fa-download"></i>
          <% end %>          
      <% end %>
  </td>  
  <td class="hideMobP">
    <%= document.tag_list %>
    <%= document.owner_tag %>
    
    <%= "Template" if document.template %>

    <% if document.from_template_id %>
      <% status = document.approved ? "Approved" : "Pending Approval" %>
      <%= render DisplayBooleanComponent.new(bool: document.approved).
        with_content(status)  %>
    <% end %>
  </td>  

  <td>
    <%= link_to "Show", document, class: "btn btn-outline-primary" %>
  </td>

</tr>
