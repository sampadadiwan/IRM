<% labels ||= nil %>
<div class='nested-fields form-row'>
    <% if f.object.user %>
    <div class="form-group col">
      <%= f.label :user_id %>
      <%= f.text_field :user_id, class: "form-control", disabled: true, value: f.object.user.full_name %>
    </div>
    <% end %>

    
    <div class="form-group col">
      <%= f.label :label %>
      <% if labels %>
        <%= f.select :label, labels, {}, class: "form-control"  %>
      <% else %>
        <%= f.text_field :label, class: "form-control"  %>
      <% end %>
    </div>

    <div class="form-group col">
      <%= f.label :signature_type %>
      <%= f.select :signature_type, ["Aadhaar", "DSC", "Electronic"], {}, class: "form-control"  %>
    </div>

    <div class="form-group col">
      <%= f.label :notes %>
      <%= f.text_field :notes, class: "form-control"  %>
    </div>

      <div class="form-group col">    
        <%= f.label :none, "&nbsp;".html_safe %>
        <%= link_to_remove_association "Delete" , f, class: "btn btn-outline-danger" %>
      </div>
  </div>
