<% esign_provider_digio = e_signature.entity.entity_setting.esign_provider == "Digio" %>
<div class="card shadow mb-4">
  <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">eSignature</h6>
  </div>
  <div class="card-body">
  <% labels ||= nil %>
  <%= form_with(model: e_signature, validate: true) do |f| %>
  <div class='nested-fields row'>
      <div class="form-group col">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control"  %>
        <small class="text-muted">Email address</small>
      </div>

      <div class="form-group col">
        <%= f.label :label %>
        <% if labels %>
          <%= f.select :label, labels, {}, class: "form-control"  %>
        <% else %>
          <%= f.text_field :label, class: "form-control"  %>
        <% end %>
      </div>

      <% if esign_provider_digio %>
      <div class="form-group col">
        <%= f.label :signature_type %>
        <%= f.select :signature_type, ["Electronic", "Aadhaar"], {}, class: "form-control"  %>
      </div>
      <% end %>

      <div class="form-group col">
        <%= f.label :notes %>
        <%= f.text_field :notes, class: "form-control"  %>
      </div>

      <div class="form-group col">
        <%= f.label :status %>
        <%= f.text_field :status, class: "form-control"  %>
      </div>

    </div>
    <div class="form-group">
      <%= f.submit "Save", {class: "btn btn-outline-primary"} %>
    </div>
<% end %>

  </div>
</div>
