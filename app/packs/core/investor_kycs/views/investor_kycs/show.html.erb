<%= render "/layouts/alerts" %>

  <table class="table table-bordered dataTable">

    <tr>
      <td>
        Investor
      </td>
      <td>
        <%= link_to @investor_kyc.investor.investor_name, investor_path(@investor_kyc.investor, tab: "kycs-tab") %>
      </td>
    </tr>
    <tr>
      <td>
        Entity
      </td>
      <td>
        <%= @investor_kyc.entity.name %>
      </td>
    </tr>
    <tr>
      <td>
        User
      </td>
      <td>
        <%= @investor_kyc.user.full_name %>
      </td>
    </tr>
    <tr>
      <td>
        First Name
      </td>
      <td>
        <%= @investor_kyc.first_name %>
      </td>
    </tr>
    <tr>
      <td>
        Middle Name
      </td>
      <td>
        <%= @investor_kyc.middle_name %>
      </td>
    </tr>
    <tr>
      <td>
        Last Name
      </td>
      <td>
        <%= @investor_kyc.last_name %>
      </td>
    </tr>
    <tr>
      <td>
        Pan
      </td>
      <td>
        <%= @investor_kyc.PAN %>
      </td>
    </tr>

    <tr>
      <td>
        Pan Verified
      </td>
      <td>
        <%= display_boolean @investor_kyc.pan_verified %>
      </td>
    </tr>

    <tr>
      <td>
        Address
      </td>
      <td>
        <%= @investor_kyc.address %>
      </td>
    </tr>
    <tr>
      <td>
        Bank Account Number
      </td>
      <td>
        <%= @investor_kyc.bank_account_number %>
      </td>
    </tr>
    <tr>
      <td>
        Ifsc Code
      </td>
      <td>
        <%= @investor_kyc.ifsc_code %>
      </td>
    </tr>
    <tr>
      <td>
        Bank Verified
      </td>
      <td>
        <%= display_boolean @investor_kyc.bank_verified %>
      </td>
    </tr>

    <tr>
      <td>
        Comments
      </td>
      <td>
        <%= @investor_kyc.comments %>
      </td>
    </tr>


    <% if params[:debug].present? %>
    <tr>
      <td>
        Bank Verification Response
      </td>
      <td>
        <%= @investor_kyc.bank_verification_response %>
      </td>
    </tr>
    <tr>
      <td>
        Bank Verification Status
      </td>
      <td>
        <%= @investor_kyc.bank_verification_status %>
      </td>
    </tr>
    <tr>
      <td>
        Signature Data
      </td>
      <td>
        <%= @investor_kyc.signature_data %>
      </td>
    </tr>
    <tr>
      <td>
        Pan Card Data
      </td>
      <td>
        <%= @investor_kyc.pan_card_data %>
      </td>
    </tr>
    
    <tr>
      <td>
        Pan Verification Response
      </td>
      <td>
        <%= @investor_kyc.pan_verification_response %>
      </td>
    </tr>
    <tr>
      <td>
        Pan Verification Status
      </td>
      <td>
        <%= @investor_kyc.pan_verification_status %>
      </td>
    </tr>

    <% end %>
    
  </table>


  <div>

    <% if policy(@investor_kyc).update? %>
      <%= link_to "Edit" , edit_investor_kyc_path(@investor_kyc), {class: "btn btn-primary" } %> 

      <%= button_to "Delete" , @investor_kyc, method: :delete, class: "btn btn-danger" , form_class: "deleteButton", data: {action: "click->confirm#delete" , turbo:false} %>
    <% end %>
  </div>