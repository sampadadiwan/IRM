
<%= render "/tasks/show", task: @task %>
  


  <div>
    <% if policy(@task).update? %>
      <%= link_to "Edit" , edit_task_path(@task), {class: "btn btn-outline-primary" } %> 
      <%= button_to "Delete" , @task, method: :delete, class: "btn btn-outline-danger" , form_class: "deleteButton" , data: {action: "click->confirm#popup" , turbo:false} %>
    <% end %>
  </div>

  <div class="associated_entity">
    <%#= render "/reminders/index", reminders: @task.reminders %>
  </div>
  