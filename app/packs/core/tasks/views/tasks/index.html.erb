
<%= turbo_frame_tag "tasks_frame", target: "_top" do %>
    <% if params[:timeline].present? %>
        <%= render "/tasks/timeline", tasks: @tasks, q: @q, lazy_load_data: false %>
    <% else %>
        <%= render "/tasks/index", tasks: @tasks, owner: @owner, for_entity: @for_entity, search: @search %>
    <% end %>
    <%= paginate @tasks, data: {turbo_frame: "tasks_frame"} %>
<% end %>
