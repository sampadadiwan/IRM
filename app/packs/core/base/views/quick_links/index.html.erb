<%= render "/layouts/alerts" %>
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Quick Links</h1>
  <%= link_to "New Quick Link", new_quick_link_path, {class: "btn btn-outline-primary"} %>
</div>

<div class="accordion" id="accordionExample">

  <% @quick_links.each_with_index do |quick_link, idx| %>
    <div class="accordion-item">
      <h2 class="accordion-header" id="heading<%=idx%>">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%=idx%>" aria-expanded="false" aria-controls="collapse<%=idx%>">
          <span class="h4 mb-0 text-gray-800"><%= idx + 1 %>. &nbsp <%= quick_link.name %>: <%= quick_link.description %></span>
        </button>
      </h2>
      <div id="collapse<%=idx%>" class="accordion-collapse collapse" aria-labelledby="collapse<%=idx%>" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <%= render "/quick_links/preview", quick_link: quick_link %>
        </div>
      </div>
    </div>

  <% end %>

  <%= paginate @quick_links %>
</div>


