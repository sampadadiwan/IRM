<%= form_with(model: quick_link) do |form| %>
  <% if quick_link.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(quick_link.errors.count, "error") %> prohibited this quick_link from being saved:</h2>

      <ul>
        <% quick_link.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :tags %>
    <%= form.select :tags, ["Fund", "Investor"], {}, class: "form-control"  %>
  </div>

  <%= form.text_field :entity_id, class: "form-control", hidden: true  %>

  <h1>Custom Fields</h1>
  <div id='quick_link_steps'>
    <%= form.fields_for :quick_link_steps do |field| %>
      <%= render 'quick_link_step_fields', :f => field %>
    <% end %>
    <div class='links'>
    </div>
  </div>

  <div class="form-group">
    <%= link_to_add_association 'Add Field', form, :quick_link_steps, class: "btn btn-outline-primary" %>
    <%= form.submit t_common(:save), {class: "btn btn-outline-primary"}%>
  </div>
<% end %>
