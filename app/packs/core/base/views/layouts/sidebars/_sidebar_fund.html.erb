    <% if current_user.enable_documents %>
        <li class="sidebar-item"> 
            <a class="sidebar-link" href="/documents">
                <span><i class="ti ti-files"></i></span>
                <span class="hide-menu"><%= t('sidebar.documents') %></span>
            </a>
        </li>
    <% end %>


    <% if current_user.enable_investments %>
        <%= render "/layouts/sidebars/investments_menus" %>
    <% end %>

    <% if current_user.enable_deals %>
        <li class="sidebar-item"> 
            <a class="sidebar-link" href="/deals">
                <span><i class="ti ti-briefcase"></i></span>
                <span class="hide-menu"><%= t('sidebar.deals') %></span>
            </a>
        </li>
