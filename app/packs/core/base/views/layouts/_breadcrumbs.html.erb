<%  
 @bread_crumbs ||= nil
 if @bread_crumbs 
%>

  <div class="card bg-secondary-subtle shadow-none position-relative overflow-hidden mb-4">
    <div class="card-body px-4 py-3">
      <div class="row align-items-center">
        <div class="col-10 col-sm-11" >

          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <% @bread_crumbs.each do |tag, link| %>
                <li class="breadcrumb-item"><a href="<%=link%>"><%= tag %></a></li>
              <% end %>
            </ol>
          </nav>
        </div>

        <div class="col-2 col-sm-1">
            <% if params[:id].present?  %>
              <%= button_to favorites_path(favoritable_type: controller_name.classify, favoritable_id: params[:id]), "data-bs-toggle": "tooltip", title: "Add to Favorites", class: "btn mb-1 btn-secondary rounded-circle round d-inline-flex align-items-center justify-content-center", method: :post  do %>
                <i class="ti ti-heart"></i>
              <% end %>
            <% end %>
        </div>

      </div>
    </div>
  </div>
<% end %>
