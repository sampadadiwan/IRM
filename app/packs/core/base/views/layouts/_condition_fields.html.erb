  
  <div class="row form-group">
    <%= f.attribute_fields do |a| %>
      <%= a.attribute_select({associations: associations}, {class: "form-control col"}) %>
    <% end %>
    <%= f.predicate_select({}, {class: "form-control col"}) %>
    <%= f.value_fields do |v| %>
      <%= v.text_field :value, class: "form-control col" %>
    <% end %>
    <%= link_to "Remove", '#', class: "remove_fields btn btn-danger col md-1" %>
  </div>
