  
  <div class="row form-group">
    <%= f.attribute_fields do |a| %>
      <%= a.attribute_select({associations: associations}, {class: "form-control col"}) %>
    <% end %>
    <%= f.predicate_select({only: [:cont, :not_cont, :eq, :not_eq, :gteq, :lteq, :blank, :null, :not_null], default: :eq}, {class: "form-control col"}) %>
    <%= f.value_fields do |v| %>
      <%= v.text_field :value, class: "form-control col" %>
    <% end %>
    <span class="col-1 pt-2">
      <%= link_to "Remove", '#', class: "remove_fields btn btn-outline-danger" %>
    </span>
    
  </div>
