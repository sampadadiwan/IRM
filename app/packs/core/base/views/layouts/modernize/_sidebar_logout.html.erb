<% if current_user %>
<div class="fixed-profile p-3 mx-4 mb-2 bg-secondary-subtle rounded sidebar-ad mt-3">
  <div class="hstack gap-3">
    <div class="john-img">
      <img src="/modernize/images/profile/user-1.jpg" class="rounded-circle" width="40" height="40" alt="" />
    </div>
    <div class="john-title">
      <h6 class="mb-0 fs-4 fw-semibold"><%= current_user.first_name %></h6>
      <span class="fs-2"><%= current_user.curr_role.humanize %></span>
    </div>
    
    <a href="#" class="border-0 bg-transparent text-primary ms-auto" tabindex="0" type="button" aria-label="logout"
              data-bs-toggle="modal" data-bs-target="#logoutModal">
      <i class="ti ti-power fs-6"></i>
    </a>
  </div>
</div>
<% end %>