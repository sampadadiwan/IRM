<% 
  widget_size ||= "col-md-6" 
  name ||= nil 
  args ||= {}
%>
<div class="<%= widget_size %> d-flex align-items-stretch">
  <div class="card w-100">
    <div class="card-body">
      <%= render "events/events", events: Event.where(entity_id: current_user.entity_id).upcoming_events.limit(10) %>
      <p class="mb-0"><%= name || "Upcoming Events" %></p>
    </div>
  </div>
</div>