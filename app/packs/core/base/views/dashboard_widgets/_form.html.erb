<%= render FormCard.new(title: "Dashboard Widgets : #{dashboard_widget.presence || 'New'}") do %>
  <%= form_with(model: dashboard_widget, validate: true) do |form| %>
    
    <% if dashboard_widget.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(dashboard_widget.errors.count, "error") %> prohibited this dashboard_widget from being saved:</h2>
        <ul>
          <% dashboard_widget.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :dashboard_name %>
      <%= form.select :dashboard_name, ["Fund Dashboard", "Portfolio Dashboard",  "Ops Dashboard", "Investor Dashboard", "Portfolio Company Dashboard"].sort, {}, class: "form-control", id: "dashboard_name"  %>
    </div>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control"  %>
    </div>
    
    <%= form.hidden_field :owner_id %>
    <%= form.hidden_field :owner_type %>
    
    <div class="form-group" 
          data-controller="dashboard-widgets" 
          data-dashboard-widgets-url-value="<%= metadata_help_dashboard_widgets_path %>" 
          data-dashboard-widgets-param-value="widget_name">
      <%= form.label :widget_name %>
      <%= form.select :widget_name, grouped_options_for_select(DashboardWidget.widget_select, dashboard_widget.widget_name), {prompt: 'Select Widget'}, class: "form-control"  %>
      <span class="text-muted">Select a widget corresponding to the Dashboard Name sected above</span>
    </div>

    
    <div class="form-group">
      <%= form.label :tags %>
      <%= form.text_field :tags, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :size %>
      <%= form.select :size, ["XL", "Large", "Medium", "Small", "XS"], {}, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :position %>
      <%= form.number_field :position, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :metadata %>
      <%= form.text_area :metadata, class: "form-control"  %>
      <span id="metadata_help" class="text-muted"></span>
    </div>

    <div class="form-group">
      <%= form.label :enabled %>
      <%= form.check_box :enabled, class: "form-check-input"  %>
    </div>

    <div class="form-group">
      <%= form.label :display_name %>
      <%= form.check_box :display_name, class: "form-check-input"  %>
    </div>

    <div class="form-group">
      <%= form.label :display_tag %>
      <%= form.check_box :display_tag, class: "form-check-input"  %>
    </div>



    <div class="form-group">
      <%= form.submit "Save", {class: "btn btn-outline-primary"}%>
    </div>

  <% end %>
<% end %>