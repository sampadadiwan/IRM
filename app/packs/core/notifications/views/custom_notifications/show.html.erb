<%= render "/layouts/alerts" %>
<table class="table table-bordered dataTable">
  <tr>
    <td>
      For
    </td>
    <td>
      <%= @custom_notification.for ? @custom_notification.for : @custom_notification.owner %>
    </td>
  </tr>
  <tr>
    <td>
      Subject
    </td>
    <td>
      <%= @custom_notification.subject %>
    </td>
  </tr>
  <tr>
    <td>
      Body
    </td>
    <td>
      <%= @custom_notification.body.html_safe %>
    </td>
  </tr>
  <tr>
    <td>
      Whatsapp
    </td>
    <td>
      <%= @custom_notification.whatsapp %>
    </td>
  </tr>
 
  <tr>
    <td>
      <%= @custom_notification.owner_type %>
    </td>
    <td>
      <%= link_to @custom_notification.owner%>
    </td>
  </tr>

  <tr>
    <td>
      Password Protect Attachment
    </td>
    <td>
      <%= display_boolean @custom_notification.password_protect_attachment%>
    </td>
  </tr>

  <% if @custom_notification.password_protect_attachment %>
  <tr>
    <td>
      Password
    </td>
    <td>
      <%= @custom_notification.attachment_password %>
    </td>
  </tr>
  <% end %>

  <tr>
    <td>
      Show Details
    </td>
    <td>
      <%= display_boolean @custom_notification.show_details%>
    </td>
  </tr>

  <tr>
    <td>
      No Link
    </td>
    <td>
      <%= display_boolean @custom_notification.no_link %>
    </td>
  </tr>

</table>
<div>
  <%= link_to "Edit", edit_custom_notification_path(@custom_notification), {class: "btn btn-outline-primary"} %>   <%= button_to "Delete", @custom_notification, method: :delete, class: "btn btn-outline-danger", form_class: "deleteButton", data: {action: "click->confirm#popup", turbo:false}  %>
</div>
