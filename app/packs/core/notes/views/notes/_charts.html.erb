<% if Note.where(entity_id: entity.id).count > 0 %>

<div class="row">
    <div class="col-lg-6 mb-4">

        <!-- Illustrations -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Interactions By Month (Notes Created)</h6>
            </div>
            <div class="card-body">
                <%= notes_by_month(entity)  %>
            </div>
        </div>
    </div>
    
    <div class="col-lg-6 mb-4">

        <!-- Illustrations -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Interactions By Month (Investor Count)</h6>
            </div>
            <div class="card-body">
                <%= investor_interaction(entity)  %>
            </div>
        </div>
    </div>
  
</div>

<% end %>