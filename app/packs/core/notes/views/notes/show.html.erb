<%= render "/layouts/alerts" %>

<table class="table table-bordered dataTable ">

      <tr>
        <td>
          Investor
        </td>
        <td>
          <%= @note.investor.investor_name %>
        </td>    
      </tr>
    
       <tr>
        <td>
          Details
        </td>
        <td>
          <%= @note.details %>
          On: <%= l @note.on if @note.on%>
        </td>    
      </tr>
  
</table>


<div>
  <%= link_to "Edit", edit_note_path(@note), {class: "btn btn-primary"} %> |
  <%= button_to "Delete", @note, method: :delete, class: "btn btn-danger", form_class: "deleteButton", data: {action: "click->confirm#popup", turbo:false} %>
</div>
