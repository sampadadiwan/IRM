
<div class="alert alert-info">
  This will move all associated data from the 'Defunct Investor' selected above to the 'Merge into Investor' below. This action cannot be reversed and is permanent
</div>
<%= form_for(:merge, url: merge_investors_path, method: :post) do |form| %>

  <div class="form-group">
    <%= form.label :old_investor_id, "Defunct Investor" %>
    <%= form.select :old_investor_id, @entity.investors.order(investor_name: :asc).map{|i| [i.investor_name, i.id]}, {include_blank: true}, class: "form-control select2", name: :old_investor_id    %>
  </div>

  <div class="form-group">
    <%= form.label :new_investor_id, "Merge into Investor" %>
    <%= form.select :new_investor_id, @entity.investors.order(investor_name: :asc).map{|i| [i.investor_name, i.id]}, {include_blank: true}, class: "form-control select2", name: :new_investor_id  %>
  </div>

  <div class="form-group">
    <%= form.submit t_common(:save), {class: "btn btn-outline-primary" }%>
  </div>

<% end %>
