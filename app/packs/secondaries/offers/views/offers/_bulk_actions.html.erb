<% secondary_sale ||= nil %>
<% if params[:q].present? %>

    <% msg = "This will Verify each offer in the search results (including results on other pages). Proceed?" %>
    <%= button_to "Verify",
    bulk_actions_offers_path("bulk_action": "Verify", q: params.to_unsafe_h[:q], all: true, secondary_sale_id: secondary_sale&.id),
    class: "dropdown-item", form_class: "w-100",
    data: {msg:, action: "click->confirm#popup", method: :post}  %>

    <% msg = "This will Unverify each offer in the search results (including results on other pages). Proceed?" %>
    <%= button_to "Unverify",
    bulk_actions_offers_path("bulk_action": "Unverify", q: params.to_unsafe_h[:q], all: true, secondary_sale_id: secondary_sale&.id),
    class: "dropdown-item", form_class: "w-100",
    data: {msg:, action: "click->confirm#popup", method: :post}  %>

    <% msg = "This will Generate SPA for each offer in the search results (including results on other pages). Proceed?" %>
    <%= button_to "Generate SPA",
    bulk_actions_offers_path("bulk_action": "Generate SPA", q: params.to_unsafe_h[:q], all: true, secondary_sale_id: secondary_sale&.id),
    class: "dropdown-item", form_class: "w-100",
    data: {msg:, action: "click->confirm#popup", method: :post}  %>

<% end %>
