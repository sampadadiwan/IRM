<%
  final_price = custom_format_number(secondary_sale.final_price, params)
  sell_quantity = number_with_delimiter(secondary_sale.total_offered_quantity)
  buy_quantity = number_with_delimiter(secondary_sale.total_interest_quantity)
  offer_allocation_percentage = [secondary_sale.allocation_percentage * 100, 100].min
%>

<%
cards_data = [
  { path: nil, stat: final_price, subtitle: "Final Price", progress_bar_color: "success", text_info: "currency-dollar"},
  { path: nil, stat: sell_quantity, subtitle: "Sell Quantity", progress_bar_color: "info", text_info: "minus" },
  { path: nil, stat: buy_quantity, subtitle: "Buy Quantity", progress_bar_color: "danger", text_info: "plus" }  
]
%>

<div class="row">
    <% cards_data.each do |card_data| %>

        <%= render(NumberStatsComponent.new(
            path: card_data[:path],
            amount: card_data[:stat],
            subtitle: card_data[:subtitle],
            progress_bar_color: card_data[:progress_bar_color],
            text_info: card_data[:text_info]
        )) %>

    <% end %>
</div>

