<%= render FormCard.new(title: "Ticker Feeds : #{ticker_feed.presence || 'New'}") do %>
  <%= form_with(model: ticker_feed, validate: true) do |form| %>
    <% if ticker_feed.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(ticker_feed.errors.count, "error") %> prohibited this ticker_feed from being saved:</h2>
        <ul>
          <% ticker_feed.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= form.label :ticker %>
      <%= form.text_field :ticker, class: "form-control"  %>
    </div>
    
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :price %>
      <%= form.number_field :price, class: "form-control", step: :any  %>
    </div>

    <div class="form-group">
      <%= form.label :currency %>
      <%= form.text_field :currency, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :source %>
      <%= form.text_field :source, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= form.label :for_date %>
      <%= form.date_field :for_date, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= form.label :for_time %>
      <%= form.datetime_field :for_time, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= form.label :price_type %>
      <%= form.text_field :price_type, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= form.submit "Save", {class: "btn btn-outline-primary"}%>
    </div>
  <% end %>
<% end %>