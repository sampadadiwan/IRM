<div id="<%= dom_id approval_response %>">

  <% if policy(approval_response).approve? %>

    <% if approval_response.status == "Pending" %>
      <p class="card-text"> Please update your response below using the drop down. </p>
    <% end %>
    <%= render "/approval_responses/quick_response", approval_response: approval_response %>
  <% else %>
    <p class="card-text"> 
      Your last response was: <span class="font-weight-bold"> <%= approval_response.status %> </span>. 
    </p>
  <% end %>

  <hr>
  <p class="card-text"> Last Updated: <%= l approval_response.updated_at %> </p>
</div>