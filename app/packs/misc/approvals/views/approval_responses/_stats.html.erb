<% colors = ["success", "warning", "danger", "primary", "secondary", "info"].freeze %>

<% index = 0 %>
<div class="row">
    
    <% status_count = approval_responses.group(:status).count %>
    <% approval.response_status&.split(',')&.each do |status| %>
    <% 
        color = colors[index % colors.length]; index += 1 
        count = status_count[status] || 0
    %>
    <div class="col">
        <a href="<%= approval_responses_path(approval_id: approval&.id, status:) %>">
            <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                <div>
                    <h3 class="fs-8"><%= count %></h3>
                    <h6 class="card-subtitle mb-1 text-muted"><%= status %></h6>
                </div>
                <div class="ms-auto">
                    <span class="text-<%=color%> display-6"><i class="ti ti-clipboard-text"></i></span>
                </div>
                </div>

                <div class="progress-bar text-bg-<%=color%>" role="progressbar" style="width: 100%; height: 6px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>

            </div>
            </div>
        </a>
    </div>
    <% end %>

    <% color = "success" %>
    <div class="col">
        <a href="<%= approval_responses_path(approval_id: approval&.id, status: nil) %>">
            <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                <div>
                    <h3 class="fs-8"><%= approval_responses.count %></h3>
                    <h6 class="card-subtitle mb-1 text-muted">All</h6>
                </div>
                <div class="ms-auto">
                    <span class="text-<%=color%> display-6"><i class="ti ti-clipboard-text"></i></span>
                </div>
                </div>

                <div class="progress-bar text-bg-<%=color%>" role="progressbar" style="width: 100%; height: 6px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>

            </div>
            </div>
        </a>
    </div>
  
</div>