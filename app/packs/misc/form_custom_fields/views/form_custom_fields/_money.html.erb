<div class="form-group <%= field.form_class(current_user) %>" <%= field.data_attributes&.html_safe %> <%= field.data_attributes&.html_safe %>  data-controller="currencyformat">
    <%= f.label field.name, field.human_label %> <span class="formatted_currency"></span>
    <% if field.info.present? %>
        <%= tag.i "",                                                     # empty <i> element
         class:    "ti ti-info-triangle text-primary",
         role:     "button",
         tabindex: 0,
         data: {
           bs_toggle:    "tooltip",
           bs_html:      true,                                   # ← allow HTML
           bs_custom_class: "wide-tooltip",
           bs_title:     field.info.body.to_html                # sanitised HTML
         } %>
   <% end %>
    <%= f.number_field field.name, class: "form-control custom_field", required: field.required, step: :any, data: {action: "input->currencyformat#format"} %>
    <small class="text-muted"><%= field.help_text&.html_safe %></small>
</div>
