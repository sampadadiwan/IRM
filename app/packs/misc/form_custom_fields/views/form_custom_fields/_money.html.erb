<div class="form-group" data-controller="currencyformat">
    <%= f.label field.name, field.name.humanize.titleize %> <span class="formatted_currency"></span>
    <%= f.number_field field.name, class: "form-control", required: field.required, step: :any, data: {action: "input->currencyformat#format"} %>
    <small class="text-muted"><%= field.help_text %></small>
</div>
