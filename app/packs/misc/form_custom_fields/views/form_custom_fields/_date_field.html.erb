<div class="form-group">
    <%= f.label field.name, field.name.humanize.titleize %>
    <% val = struct[field.name] ? Date.parse(struct[field.name]) : nil %>
    <%= f.date_field field.name, class: "form-control", required: field.required, value: val   %>
    <small class="text-muted"><%= field.help_text %></small>
</div>
