<div class="form-group <%= field.read_only ? 'hidden_form_field' : '' %>">
    <%= f.label field.name, field.human_label %>
    <% options = field.meta_data.present? ? field.meta_data.split(",") : [] %>
    <%= f.select field.name, options, {include_blank: false, include_hidden: false}, class: "form-control  custom_field select2", required: field.required, multiple: true %>
    <small class="text-muted"><%= field.help_text %></small>
</div>