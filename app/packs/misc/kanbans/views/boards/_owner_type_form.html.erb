<% possible_owner_types ||= [] %>
<% include_blank ||= "All" %>
<% unless possible_owner_types.blank? %>
    <%= form_with(model: nil, method: :get, action: "", id: "owner_type_form") do |form| %>

    <div class="form-group" data-controller="owner">
        <% selected = params[:owner_type].presence || (cookies && cookies[:owner_type]) %>
        <%= form.select :owner_type, possible_owner_types , {selected: selected, include_blank: include_blank },
            { id: "owner_type", class: "form-control",
            data: { action: "change->owner#setOwnerType", toggle: "tooltip", title: "Choose Board Type" } } %>
    </div>


    <%= form.submit "Submit", {hidden: true, id: "submit"}%>


    <% end %>
<% end %>
