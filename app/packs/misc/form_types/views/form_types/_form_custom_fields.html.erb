<div class='nested-fields row'>
    <div class="row">
    <div class="form-group col-md-1">
        <%= f.label :position %>
        <%= f.text_field :position, class: "form-control" %>
    </div>

    <% if @form_type.name == 'KpiReport' %>
        <div class="form-group col-md-2">
            <% x = f.object.name.to_s.titleize %>
            <%= f.label :name %>
            <%= f.select :name, KpiReport.custom_fields, {selected: x}, class: "form-control" %>
        </div>
    <% else %>
        <div class="form-group col-md-2">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
        </div>
    <% end %>
    
    <div class="form-group col-md-1">
        <%= f.label :field_type %>
        <%= f.select :field_type, %w[TextField NumberField DateField TextArea CheckBox Radio Select MultiSelect Money File], {}, class: "form-control" %>
    </div>

    <div class="form-group col-md-1">
        <%= f.label :required %>
        <%= f.check_box :required, class: "form-check-input mt-3" %>
    </div>

    <div class="form-group col-md-1">
        <%= f.label :read_only %>
        <%= f.check_box :read_only, class: "form-check-input mt-3" %>
    </div>

    <div class="form-group col-md-1">
        <%= f.label :meta_data %>
        <%= f.text_field :meta_data, class: "form-control" %>
    </div>

    <div class="form-group col-md-1">
        <%= f.label :help_text %>
        <%= f.text_field :help_text, class: "form-control" %>
    </div>

    <div class="form-group col-md-1">
        <%= f.label :show_user_ids, "Show only to" %>
        <%= f.text_field :show_user_ids, class: "form-control", placeholder: "List of user ids to hide this field from" %>
    </div>
    <div class="form-group col-md-1">
        <%= f.label :step %>
        <%= f.select :step, FormCustomField.steps.keys, {}, class: "form-control" %>
    </div>

    </div>

    <div class="row">
    <div class="form-group col-md-10">
        <%= f.label :label %>
        <%= f.text_field :label, class: "form-control" %>
    </div>

    <div class="form-group col-md-1">    
        <%= f.label :none, "&nbsp;".html_safe %>
        <%= link_to_remove_association "Delete" , f, class: "btn btn-outline-danger mt-4" %>
    </div>
    </div>
</div>