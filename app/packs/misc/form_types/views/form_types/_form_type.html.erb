<tr id="<%= dom_id form_type %>">
  <td>
    <%= form_type.name %>
  </td>
  <td>
    <%= form_type.tag %>
  </td>
  <td>
    <%= link_to "Show" , form_type , {class: "btn btn-outline-primary" }%>
    <%= link_to "Edit" , edit_form_type_path(form_type) , {class: "btn btn-outline-success" } if policy(form_type).update? %>
    <%= link_to "Configure Grids", configure_grids_grid_view_preferences_path(owner_type: 'FormType', owner_id: form_type.id), method: :get, class: "btn btn-outline-secondary" if policy(form_type).configure_grids? %>
  </td>
</tr>
