<div class="card overflow-hidden">
  <div class="card-body p-4">    
    <h2 class="fs-9 fw-semibold my-4"><%= @blog.title %></h2>
    <div class="d-flex align-items-center gap-4">
      
      <div class="d-flex align-items-center gap-2">
        <% @blog.tag_list.split(",").each do |tag| %>
          <%= link_to tag.strip, "#", class: "badge bg-primary-subtle text-primary" %>
        <% end %>
      </div>
      <div class="d-flex align-items-center gap-2">
        <%= l @blog.updated_at.to_date %>
      </div>
      <div class="d-flex align-items-center fs-2 ms-auto">
        <%= link_to "Edit", edit_blog_path(@blog), class: "btn btn-outline-success ti ti-edit" if policy(@blog).edit? %>
      </div>

      
    </div>
  </div>
  <div class="card-body border-top p-4">
    <%= @blog.content.to_s %>
  </div>
</div>