  <div class="row justify-content-md-center">
    <div class="col-md-6 setup-content">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Event for <%= event.owner.class.to_s %></h6>
        </div>
        <div class="card-body">
          <% if event.errors.any? %>
            <div class="alert alert-danger">
              <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
              <ul>
                <% event.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= form_with(model: event, local: true, class: "justify-content-md-center") do |form| %>
            <%= form.hidden_field :owner_type, value: params["owner_type"] %>
            <%= form.hidden_field :owner_id, value: params["owner_id"] %>

            <div class="form-group">
              <%= form.label :title %>
              <%= form.text_field :title, class: "form-control", maxlength: 100 %>
            </div>

            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: "form-control", rows: 5 %>
            </div>

            <div class="form-group">
              <%= form.label :start_time %>
              <%= form.datetime_local_field :start_time, value: event.start_time&.strftime('%Y-%m-%dT%H:%M'), class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :end_time %>
              <%= form.datetime_local_field :end_time, value: event.end_time&.strftime('%Y-%m-%dT%H:%M'), class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.button type: 'submit', class: "btn btn-outline-primary btn-lg pull-right" do %>
                  <i class="ti ti-device-floppy"></i> <%= t_common(:save) %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
