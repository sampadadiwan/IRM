<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Edit Event</h6>
  </div>
  <div class="card-body">

    <%= form_with(model: @event, validate: true, local: true) do |form| %>
      <% if @event.errors.any? %>
        <div class="alert alert-danger">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% @event.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form.hidden_field :owner_type, value: @event.owner_type %>
      <%= form.hidden_field :owner_id, value: @event.owner_id %>

      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control", maxlength: 100 %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control", rows: 5 %>
      </div>

      <div class="form-group">
        <%= form.label :start_time %>
        <%= form.datetime_local_field :start_time, value: @event.start_time&.strftime('%Y-%m-%dT%H:%M'), class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :end_time %>
        <%= form.datetime_local_field :end_time, value: @event.end_time&.strftime('%Y-%m-%dT%H:%M'), class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit "Update", class: "btn btn-outline-primary" %>
      </div>
    <% end %>

  </div>
</div>

<div class="actions">
  <%= link_to 'Back to Event', event_path(@event), class: "btn btn-secondary" %>
</div>
