<%= render FormCard.new(title: "Key Biz Metrics : #{key_biz_metric.presence || 'New'}") do %>
  <%= form_with(model: key_biz_metric, validate: true) do |form| %>
    <% if key_biz_metric.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(key_biz_metric.errors.count, "error") %> prohibited this key_biz_metric from being saved:</h2>
        <ul>
          <% key_biz_metric.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= form.label :metric_type %>
      <%= form.text_field :metric_type, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= form.label :value %>
      <%= form.text_field :value, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= form.label :display_value %>
      <%= form.text_field :display_value, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= form.label :notes %>
      <%= form.text_field :notes, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= form.label :query %>
      <%= form.text_area :query, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= form.submit "Save", {class: "btn btn-outline-primary"}%>
    </div>
  <% end %>
<% end %>