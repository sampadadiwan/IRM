<%= form_with(model: ci_profile) do |form| %>
  <% if ci_profile.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(ci_profile.errors.count, "error") %> prohibited this ci_profile from being saved:</h2>

      <ul>
        <% ci_profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :geography %>
    <%= form.text_field :geography, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :stage %>
    <%= form.text_field :stage, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :sector %>
    <%= form.text_field :sector, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :currency %>
    <%= form.text_field :currency, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :fund_size %>
    <%= form.number_field :fund_size, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :min_investment, "Minimum Investment" %>
    <%= form.number_field :min_investment, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.text_field :status, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :details %>
    <%= form.rich_text_area :details, class: "form-control"  %>
  </div>

  <div class="containerx">

    <% ci_profile.track_record.each do |k,v| %>
      <div class="form-group row">
        <%= form.label k, class: "col-1" %>
        <%= text_field_tag "ci_profile[track_record][" + k + "]", v, class: "form-control col" %> 
      </div>
    <% end %>

  </div>

  <div class="form-group">
    <%= form.submit "Save", {class: "btn btn-outline-primary"}%>
  </div>
<% end %>
