  <div class="form-group">
    <%= form.label :url %>
    <%= form.text_field :url, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :logo_url %>
    <%= form.text_field :logo_url, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.text_field :category, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :founded %>
    <%= form.date_field :founded , class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :funding_amount %>
    <%= form.text_field :funding_amount, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :funding_unit %>
    <%= form.text_field :funding_unit, class: "form-control"  %>
  </div>

