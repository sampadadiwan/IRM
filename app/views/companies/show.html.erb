<p style="color: green;text-align: center"><%= notice %></p>

<div class="card shadow mb-4">

   <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary"><%= link_to @company.name, @company %></h6>
   </div>

   <div class="card-body">

      <table class="table table-bordered dataTable">
         <tr id="<%= dom_id @company %>">
            <td>
               Logo
            </td>
            <td>
               <%= image_tag(@company.logo_url, class: "logo_url") if @company.logo_url.blank? %>
            </td>
         </tr>
         <tr>
            <td>
               Url
            </td>
            <td>
               <%= link_to @company.url, @company.url if @company.url.blank? %>
            </td>
         </tr>
         <tr>
            <td>
               Category
            </td>
            <td>
               <%= @company.category %>
            </td>
         </tr>
         <tr>
            <td>
               Founded
            </td>
            <td>
               <%= @company.founded %>
            </td>
         </tr>
         <tr>
            <td>
               Funding
            </td>
            <td>
               <%= @company.funding_amount %>, <%= @company.funding_unit %>
            </td>
         </tr>
         <tr>
            <td>
               Details
            </td>
            <td>
               <%= @company.details %>
            </td>
         </tr>
      </table>
      <div>
         <%= link_to "Edit", edit_company_path(@company), {class: "btn btn-primary"} %> |
         <%= link_to "Back", companies_path, {class: "btn btn-primary"} %> |
         <%= link_to "New Document", new_document_path(owner_id: @company.id, owner_type: "Company"), {class: "btn btn-primary"}  %> |
         <%= link_to "New Employee", new_user_path(company_id: @company.id), {class: "btn btn-primary"}  %> |

         <%= button_to "Delete", @company, method: :delete, class: "btn btn-danger", form_class: "deleteButton" %>
      </div>
   </div>
</div>

<%= render "documents/index", documents: @company.documents %>
