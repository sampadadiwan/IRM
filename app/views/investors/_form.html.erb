
<%= form_with(model: investor) do |form| %>
  <% if investor.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(investor.errors.count, "error") %> prohibited this investor from being saved:</h2>

      <ul>
        <% investor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :investor %>
    <%= form.text_field :investor_company_name, class: "form-control typeahead"  %>
    <%= form.text_field :investor_id, class: "form-control typeahead", hidden: true   %>
    <%= form.text_field :investor_type, class: "form-control typeahead", hidden: true, value: "Company"   %>
  </div>

  <% if current_user.role == "Super" %>
  <div class="form-group">
    <%= form.label :investee_company_id %>
    <%= form.number_field :investee_company_id, class: "form-control"  %>
  </div>
  <% end %>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.text_field :category, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.submit "Save", {class: "btn btn-primary"}%>
  </div>
<% end %>

<div data-controller="investor"></div>
