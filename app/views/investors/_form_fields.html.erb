  <div class="form-group">
    <%= form.label :investor %>
    <% if investor.investor_entity %>
      <%= form.text_field :investor_entity_name, class: "form-control typeahead", 
        value: investor.investor_name  %>
    <% else %>
      <%= form.text_field :investor_entity_name, class: "form-control typeahead", 
        value: ""  %>
    <% end %>
    <%= form.text_field :investor_entity_id, class: "form-control", hidden: true   %>
  </div>

  <div class="form-group">
    <%= form.label :tags %>
    <%= form.text_field :tag_list, class: "form-control"  %>
    <small class="text-muted">Comma separated list of tags to classify the document</small>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.select :category, Investor.INVESTOR_CATEGORIES(current_user.entity) , {include_blank: true}, class: "form-control"  %>
  </div>

  <div data-controller="investor"></div>
