<%= render "/layouts/alerts" %>

  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Aggregate Investments</h1>
    
    <span>
      <%= render "investments/scenarios_form"  %>
      <%= link_to "Scenarios", scenarios_path, {class: "btn btn-primary"} %>
    </span>

  </div>

  <div class="table-responsive" data-controller="agginvestments">

    <table id="aggregate_investments" class="table table-bordered dataTable jqDataTable">

      <thead>
        <tr>
         <th></th>

          <th>
            Category
          </th>
          <th>
            Investor
          </th>
          <th>
            Equity
          </th>
          <th>
            Preferred
          </th>
          <th>
            Total
          </th>

          <th>
            Percentage
          </th>

          <th>
            Options
          </th>
          <th>
            Full Diluted
          </th>
          <th>
            Full Diluted Percentage
          </th>

          <th>
          </th>
        </tr>
      </thead>

      <tbody>
        <% @aggregate_investments.each do |aggregate_investment| %>
          <%= render aggregate_investment %>
        <% end %>
      </tbody>
    </table>

  </div>