

<tr id="<%= dom_id aggregate_investment %>">

<td class="dt-control"  
    data-entity="<%=aggregate_investment.entity_id%>"
    data-investor="<%=aggregate_investment.investor_id%>">
</td>

<td>
    <%= aggregate_investment.investor.category %>
</td>  
<td>
    <%= link_to aggregate_investment.investor.investor_name, aggregate_investment.investor %>
</td>  
<td class="equity">
    <%= custom_format_number aggregate_investment.equity, params %>
</td>  
<td class="preferred">
    <%= custom_format_number aggregate_investment.preferred, params %>
</td>  
<td>
  <%= custom_format_number (aggregate_investment.equity + aggregate_investment.preferred) , params %>
</td>
<td>
  <%= aggregate_investment.percentage %> %
</td>  

<td class="options">
    <%= custom_format_number aggregate_investment.options, params %>
</td>  

<td>
  <%= custom_format_number (aggregate_investment.equity + aggregate_investment.preferred + aggregate_investment.options), params %>
</td>  

<td>
    <%= aggregate_investment.full_diluted_percentage %> %
</td>  
<td>
  <%= link_to "Show", aggregate_investment , {class: "btn btn-primary"}%>
</td>
</tr>
