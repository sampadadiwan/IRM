<%= render "/layouts/alerts" %>

  <table class="table table-bordered dataTable">

    <tr>
      <td>
        Details
      </td>
      <td>
        <%= @task.details.html_safe %>
      </td>
    </tr>
    <tr>
      <td>
        Entity
      </td>
      <td>
        <%= @task.entity.name %>
      </td>
    </tr>
    <tr>
      <td>
        For
      </td>
      <td>
        <%= @task.for_entity.name %>
      </td>
    </tr>
    <tr>
      <td>
        Owner
      </td>
      <td>
        <%= link_to @task.owner_type, @task.owner if @task.owner %>
      </td>
    </tr>

    <tr>
      <td>
        Due Date
      </td>
      <td>
        <%= l @task.due_date if @task.due_date %>
      </td>
    </tr>

    <tr>
      <td>
        Completed
      </td>
      <td>
        <%= display_boolean(@task.completed) %>
      </td>
    </tr>
    <tr>
      <td>
        User
      </td>
      <td>
        <%= @task.user.full_name %>
      </td>
    </tr>

    <tr>
      <td>
        Assigned To
      </td>
      <td>
        <%= @task.assigned_to.full_name if @task.assigned_to %>
      </td>
    </tr>

    <%= display_custom_fields(@task) %>

  </table>


  <div>
    <% if policy(@task).update? %>
      <%= link_to "Edit" , edit_task_path(@task), {class: "btn btn-primary" } %> |
      <%= button_to "Delete" , @task, method: :delete, class: "btn btn-danger" , form_class: "deleteButton" , data:
          {action: "click->confirm#delete" , turbo:false} %>
    <% end %>
  </div>

  <div class="associated_entity">
    <%#= render "/reminders/index", reminders: @task.reminders %>
  </div>
  