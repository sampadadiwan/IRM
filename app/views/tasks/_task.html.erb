<tr id="<%= dom_id task %>">
  <td>
    <%= task.details.html_safe %>
  </td>
  <td>
    <%= link_to task.owner_type, "/#{task.owner_type.underscore.pluralize}/#{task.owner_id}" %>
  </td>
  <td>
    <%= task.for_entity.name %>
  </td>
  <td>
    <%= display_boolean(task.completed) %>
  </td>
  <td>
    <%= task.user.full_name %>
  </td>
  <td>
    <%= l task.created_at %>
  </td>
  <td>
    <% if policy(task).update? %>
      <% checked = task.completed == 1 ? "checked" : ""%>
      <%= form_with(model: task, url: completed_task_path(task), class: "inline_form") do |form| %>
          <%= form.check_box :completed, class: "form-control task-done-checkbox", onchange:"this.form.requestSubmit();"  %>
      <% end %>
    <% end %>
    
    <%= link_to "Show" , task , {class: "btn btn-primary" } if policy(task).show? %>
  </td>
</tr>