<%= form_with(model: funding_round) do |form| %>
  <% if funding_round.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(funding_round.errors.count, "error") %> prohibited this funding_round from being saved:</h2>

      <ul>
        <% funding_round.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control"  %>
    <%= form.text_field :entity_id, class: "form-control", hidden: true  %>
    <%= form.text_field :currency, class: "form-control", hidden: true  %>
  </div>

  <div class="form-group">
    <%= form.label :total_amount %>
    <%= form.text_field :total_amount, class: "form-control"  %>
    <small class="text-muted">In <%= funding_round.currency %></small>
  </div>

  <div class="form-group">
    <%= form.label :pre_money_valuation %>
    <%= form.text_field :pre_money_valuation, class: "form-control"  %>
    <small class="text-muted">In <%= funding_round.currency %></small>
  </div>

  <div class="form-group">
    <%= form.submit "Save", {class: "btn btn-primary"}%>
  </div>
<% end %>
