
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Offers</h1>
</div>

<table id="offers" class="table table-bordered dataTable">
    <thead>
        <tr>
            <th>
                User
            </th>
            <th>
                Investor
            </th>
            <% if show_entity %>
            <th>
                Entity
            </th>
            <% end %>
            <% if show_secondary_sale %>
            <th>
                Secondary Sale
            </th>
            <% end %>
            <th>
                Quantity
            </th>
            <th>
                Percentage
            </th>
            <th>
                Notes
            </th>
            <th>
                Approved
            </th>
            <th>
            </th>
        </tr>
    </thead>

    <tbody>
        <% offers.each do |offer| %>
            <%= render offer, show_entity: show_entity, show_secondary_sale: show_secondary_sale, secondary_sale: secondary_sale %>
        <% end %>
    </tbody>
</table>