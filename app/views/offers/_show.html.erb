
  <table class="table table-bordered dataTable">

    <tr>
      <td>
        User
      </td>
      <td>
        <%= @offer.user.full_name %>
        (<%= @offer.user.email %>)
      </td>
    </tr>
    <tr>
      <td>
        Entity
      </td>
      <td>
        <%= @offer.entity.name %>
      </td>
    </tr>
    <tr>
      <td>
        Secondary Sale
      </td>
      <td>
        <%= link_to @offer.secondary_sale.name, @offer.secondary_sale %>
      </td>
    </tr>
    <tr>
      <td>
        Quantity
      </td>
      <td>
        <%= @offer.quantity %>
      </td>
    </tr>
    <tr>
      <td>
        Percentage
      </td>
      <td>
        <%= @offer.percentage %>%
          <% if @offer.percentage && @offer.percentage > @offer.secondary_sale.percent_allowed %>
            <div>
              <div class="badge badge-danger">Over Allowed Percentage</div>
              The current sale allows you to sell only <%= @offer.secondary_sale.percent_allowed %>% of your holdings
            </div>
            <% end %>
      </td>
    </tr>


    <tr>
      <td>
        Notes
      </td>
      <td>
        <%= @offer.notes %>
      </td>
    </tr>
    <tr id="approved">
      <td>
        Approved
      </td>
      <td class="approved">
        <span class="badge <%= @offer.approved ? 'bg-success' : 'bg-warning' %>">
          <%= @offer.approved ?  "Yes" : "No" %>
        </span>
      </td>

    </tr>

    <% if @offer.PAN  || params[:debug].present? %>
      <tr>
        <td colspan="2" class="bg-primary"></td>
      </tr>
      <tr>
        <td>
          Allocated Quantity
        </td>
        <td>
          <%= @offer.allocation_quantity %>
        </td>
      </tr>
      <tr>
        <td>
          Final Price
        </td>
        <td>
          <%= @offer.final_price %>
        </td>
      </tr>
      <tr>
        <td>
          Allocation Amount
        </td>
        <td>
          <%= money_to_currency @offer.allocation_amount, params %>
        </td>
      </tr>
      <tr>
        <td>
          Allocation %
        </td>
        <td>
          <%= @offer.allocation_percentage %> %
        </td>
      </tr>

      <tr>
        <td>
          Aquirer
        </td>
        <td>
          <%= @offer.acquirer_name %> 
        </td>
      </tr>


      <tr>
        <td colspan="2" class="bg-primary"></td>
      </tr>
      <tr>
        <td>
          First Name
        </td>
        <td>
          <%= @offer.first_name %>
        </td>
      </tr>
      <tr>
        <td>
          Middle Name
        </td>
        <td>
          <%= @offer.middle_name %>
        </td>
      </tr>
      <tr>
        <td>
          Last Name
        </td>
        <td>
          <%= @offer.last_name %>
        </td>
      </tr>
      <tr>
        <td>
          Address
        </td>
        <td>
          <%= @offer.address %>
        </td>
      </tr>
      <tr>
        <td>
          PAN
        </td>
        <td>
          <%= @offer.PAN %>          
        </td>
      </tr>

      <tr>
        <td>
          Pan Card
        </td>
        <td>
          <%= link_to "Pan Card", @offer.pan_card_url if @offer.pan_card.present? %>
          <br>
          <% if @offer.pan_card.present? %>
            <% if @offer.pan_verified %>
              <span class="badge badge-success">Verified</span>
            <% else %>
              <span class="badge badge-danger"><%= @offer.pan_verification_status %></span>
            <% end %>
          <% else %>
            <span class="badge badge-warning">Not Uploaded</span>
          <% end %>
        </td>
      </tr>

      <tr>
        <td>
          Bank Account Number
        </td>
        <td>
          <%= @offer.bank_account_number %>
        </td>
      </tr>
      <tr>
        <td>
          Bank Name
        </td>
        <td>
          <%= @offer.bank_name %>
        </td>
      </tr>
      <tr>
        <td>
          Bank Routing Info
        </td>
        <td>
          <%= @offer.bank_routing_info %>
        </td>
      </tr>

      <% if current_user %>

        <tr>
            <td colspan="2" class="bg-primary"></td>
        </tr>


        <tr>
            <td>
              Signature
            </td>
            <td>
              <%= image_tag @offer.signature_url, 
                style: "margin:0px; padding:0px; max-width:200px; max-height:200px;" if @offer.signature.present? %>
            </td>
        </tr>

        <tr>
            <td>
            I agree to enter into the SPA
            </td>
            <td>
                <%= display_boolean @offer.final_agreement %>
            </td>
        </tr>


        
        <% if @offer.secondary_sale.spa.present? || @offer.spa.present? %>

            <tr>
            <td colspan="2" class="bg-primary"></td>
            </tr>      
            <tr>
            <td>
                SPA
            </td>
            <td>
                <% 
                  spa = @offer.spa 
                  spa ||= @offer.secondary_sale.spa 
                %>
                <%= render "/layouts/attachments" , attachments: [spa], allow_delete: "No" %>
            </td>
            </tr>

        <% end %>

      <% end %>

    <% end %>

    <%= display_custom_fields(@offer) if current_user %>


  </table>