<tr id="<%= dom_id offer %>">
  <td>
    <%= offer.user.full_name %>
  </td>
  <td>
    <%= offer.investor.investor_name %>
  </td>
  <% if show_entity %>
  <td>
    <%= offer.entity.name %>
  </td>
  <% end %>
  <% if show_secondary_sale %>
  <td>
    <%= offer.secondary_sale.name %>
  </td>
  <% end %>
  <td>
    <%= offer.quantity %>
  </td>
  <td>
    <%= offer.percentage %>%
    <% if offer.percentage > offer.secondary_sale.percent_allowed %>
      <span class="badge badge-danger">Over Allowed Percentge</span>
    <% end %>
  </td>
  <td>
    <%= custom_format_number offer.allocation_quantity, params %>
  </td>
  <td>
    <%= offer.allocation_percentage %>%
  </td>
  <td>
    <%= custom_format_number offer.final_price, params %>
  </td>
  <td>
    <%= money_to_currency offer.allocation_amount, params %>
  </td>
  <td>
    <%= offer.notes %>
  </td>
  <td class="approved">
    <span class="badge <%= offer.approved ? 'bg-success' : 'bg-warning' %>">
      <%= offer.approved ?  "Yes" : "No" %>
    </span>
  </td>
  <td>
    <%= link_to "Show" , offer , {class: "btn btn-primary" }%>
    <% label = offer.approved ?  "UnApprove" : "Approve" %>
    <%= button_to label , approve_offer_path(offer), method: :patch, class: "btn btn-success" , 
      form_class: "deleteButton" if Pundit.policy(current_user, offer).approve? %>

    <%= button_to "Delete", offer, method: :delete, class: "btn btn-danger", form_class: "deleteButton" if Pundit.policy(current_user, offer).destroy? %>    
  </td>
</tr>