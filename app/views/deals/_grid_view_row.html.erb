<tr id="<%=dom_id(deal_investor)%>">
    <td>        
        <div class="dropdown">
            <span type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= deal_investor.investor_name %>
            </span>
            <div class="dropdown-menu">
                <%= link_to "View Docs", deal_docs_path(deal_investor_id: deal_investor.id, deal_id: deal_investor.deal_id), class: "dropdown-item" %>
                <%= link_to "View Msgs", deal_messages_path(deal_investor_id: deal_investor.id, deal_id: deal_investor.deal_id), class: "dropdown-item" %>
                <%= link_to "View Activities", deal_activities_path(deal_investor_id: deal_investor.id, deal_id: deal_investor.deal_id), class: "dropdown-item" %>
            </div>
        </div>
    </td>
    <td>
        <%= deal_investor.primary_amount %>
    </td>
    <td>
        <%= deal_investor.secondary_investment %>
    </td>
    <% deal_investor.deal_activities.each do |activity| %>
        <td>
            
            <div class="dropdown">
                <span class="btn btn-sm btn-outline-secondary dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <%= activity.summary %>
                </span>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <%= button_to "Toogle Done", toggle_completed_deal_activity_path(activity), class: "dropdown-item" %>
                    <%= link_to "Show", deal_activity_path(activity), class: "dropdown-item" %>
                    <%= link_to "Edit", edit_deal_activity_path(activity), class: "dropdown-item" %>
                </div>
            </div>
        </td>
    <% end %>
</tr>