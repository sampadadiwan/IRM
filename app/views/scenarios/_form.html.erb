<%= form_with(model: scenario, validate: true) do |form| %>
  <% if scenario.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(scenario.errors.count, "error") %> prohibited this scenario from being saved:</h2>

      <ul>
        <% scenario.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control"  %>
    <%= form.text_field :entity_id, class: "form-control", hidden: true  %>
  </div>

  <div class="form-group">
    <%= form.label :clone_from %>
    <%= form.select :cloned_from, current_user.entity.scenarios.order("id asc").map{|s|[s.name, s.id]}, {include_blank: true}, 
        { id: "scenario_id", class: "form-control", 
        data: { toggle: "tooltip", title: "Choose scenario to clone from" } } %>
    <small class="text-muted">Clones all the investments in the scenario. Leave blank if you dont want to clone the investments.</small>

  </div>

  <div class="form-group">
    <%= form.submit "Save", {class: "btn btn-primary"}%>
  </div>
<% end %>
