<!-- Logout Modal-->
<div class="modal fade" id="confirmCancelModal" tabindex="-1" role="dialog" aria-labelledby="confirmCancelModal"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmCancelModalLabel">Are you sure?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>

        <form id="confirm_submit" class="button_to" method="post" action="<%= cancel_holding_path(@holding) %>">

            <div class="modal-body">
                <% if holding.net_unvested_quantity > 0 %>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="type" value="unvested" id="unvested">
                    <label class="form-check-label" for="unvested">
                        Cancel Only Unvested Options (<%= holding.net_unvested_quantity %> Options)
                    </label>
                </div>
                <% end %>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="type" value="all" id="all" checked>
                    <label class="form-check-label" for="all">
                        Cancel All Options (Unvested + Vested = <%= holding.uncancelled_quantity %> Options)
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <input type="hidden" name="_method" value="patch" autocomplete="off">
                <input type="submit" class="btn btn-danger" value="Proceed"/>
            </div>

        </form>

        </div>
    </div>
</div>