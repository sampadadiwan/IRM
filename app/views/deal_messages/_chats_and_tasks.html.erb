<div class="row">
    <div class="col-lg-6 mb-4">
        <!-- Illustrations -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <span class="chat-with">Chat between <%=deal_investor.investor_name%> & <%=deal_investor.entity_name%> </span>
                    <%= link_to deal_messages_path(deal_investor_id: deal_investor.id), class: "float-right" do %>
                        <i class="fas fa-expand"></i>
                    <% end %>
                </h6>
            </div>
            <div class="card-body">
                <%= render "deal_messages/conversation", deal_messages: deal_messages, deal_investor: deal_investor %>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <!-- Illustrations -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Tasks</h6>
            </div>
            <div class="card-body">
                <%= render "deal_messages/index", deal_messages: deal_messages.tasks_not_done %>
            </div>
        </div>
    </div>
</div>