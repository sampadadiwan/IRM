<%= form_with(model: nil, method: :get, action: "", id: "scenarios_form") do |form| %>

  <div class="form-group" data-controller="scenarios">
    <% selected = params[:scenario_id].present? ? params[:scenario_id] : cookies[:scenario_id] %>
    <%= form.select :scenario_id, current_user.entity.scenarios.order("id asc").map{|s|[s.name, s.id]}, {selected: selected}, 
        { id: "scenario_id", class: "form-control", 
        data: { action: "change->scenarios#setScenario", toggle: "tooltip", title: "Choose Scenario" } } %>

  </div>

  
  <%= form.submit "Submit", {hidden: true, id: "submit"}%>


<% end %>