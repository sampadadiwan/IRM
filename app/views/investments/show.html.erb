<%= render "/layouts/alerts" %>
<table class="table table-bordered dataTable ">
   <tr>
      <td>
         Investment Type
      </td>
      <td>
         <%= @investment.funding_round ? link_to(@investment.investment_type, @investment.funding_round) : @investment.investment_type %>
      </td>
   </tr>
   <tr>
      <td>
         Investor
      </td>
      <td>
         <%= link_to @investment.investor.investor_name, @investment.investor %>
      </td>
   </tr>
   <tr>
      <td>
         Investee Entity
      </td>
      <td>
         <%= link_to @investment.investee_entity.name, @investment.investee_entity %>
      </td>
   </tr>

   <% if @investment.investor_type != "Prospective" %>
   <tr>
      <td>
         Category
      </td>
      <td>
         <%= @investment.category %>
      </td>
   </tr>
   
   <tr>
      <td>
         Investment Instrument
      </td>
      <td>
         <%= @investment.investment_instrument %>
      </td>
   </tr>
   <tr>
      <td>
         Quantity
      </td>
      <td>
         <%= @investment.quantity %>
      </td>
   </tr>

   <tr>
      <td>
         Price
      </td>
      <td>
         <%= money_to_currency @investment.price %>
      </td>
   </tr>
   <tr>
      <td>
         Amount
      </td>
      <td>
         <%= money_to_currency @investment.amount %>
      </td>
   </tr>



   <% if @investment.investment_instrument != "Debt" %>
      <tr>
         <td>
            Percentage Holding
         </td>
         <td>
            <%= @investment.percentage_holding %> %
         </td>
      </tr>
      <tr>
         <td>
            Fully Diluted
         </td>
         <td>
            <%= @investment.diluted_percentage %> %
         </td>
      </tr>
   <% end %>

   <% end %>
</table>

<% if current_user.entity_id == @investment.investee_entity_id %>

   <div>
      <%= link_to "Edit", edit_investment_path(@investment), {class: "btn btn-primary"} %> |
      <%= button_to "Delete", @investment, method: :delete, class: "btn btn-danger", form_class: "deleteButton" %>
   </div>

<% end %>