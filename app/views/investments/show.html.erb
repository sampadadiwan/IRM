<%= render "/layouts/alerts" %>
<table class="table table-bordered dataTable ">
   <tr>
      <td>
         Investment Type
      </td>
      <td>
         <%= @investment.investment_type %>
      </td>
   </tr>
   <tr>
      <td>
         Investor
      </td>
      <td>
         <%= @investment.investor.investor_name %>
      </td>
   </tr>
   <tr>
      <td>
         Investee Entity
      </td>
      <td>
         <%= @investment.investee_entity.name %>
      </td>
   </tr>

   <% if @investment.investor_type != "Prospective" %>
   <tr>
      <td>
         Category
      </td>
      <td>
         <%= @investment.category %>
      </td>
   </tr>
   
   <tr>
      <td>
         Investment Instrument
      </td>
      <td>
         <%= @investment.investment_instrument %>
      </td>
   </tr>
   <tr>
      <td>
         Quantity
      </td>
      <td>
         <%= @investment.quantity %>
      </td>
   </tr>

   <% if @investment.investment_instrument != "Debt" %>
   <tr>
      <td>
         Percentage Holding
      </td>
      <td>
         <%= @investment.percentage_holding %> %
      </td>
   </tr>
   <tr>
      <td>
         Fully Diluted
      </td>
      <td>
         <%= @investment.diluted_percentage %> %
      </td>
   </tr>
   <% end %>
   <tr>
      <td>
         Price
      </td>
      <td>
         <%= number_to_currency @investment.price %>
      </td>
   </tr>
   <tr>
      <td>
         Amount
      </td>
      <td>
         <%= number_to_currency  @investment.amount %>
      </td>
   </tr>
   <% end %>
</table>

<% if current_user.entity_id == @investment.investee_entity_id %>

   <div>
      <%= link_to "Edit", edit_investment_path(@investment), {class: "btn btn-primary"} %> |
      <%= button_to "Delete", @investment, method: :delete, class: "btn btn-danger", form_class: "deleteButton" %>
   </div>

<% end %>