
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Cap Table</h1>
  <span>
  <%= link_to "New Investment", new_investment_path("investment[investee_entity_id]": current_user.entity_id), 
      {class: "btn btn-primary"} if current_user.entity_id == entity.id %>
  <%= link_to investments_path(format: :xlsx), {class: "btn btn-success"} do %>
    <i class="fa-lg fa-regular fa-file-excel"></i> Download
  <% end %>
  </span>
</div>

<div class="table-responsive">

  <table id="investments" class="table table-bordered dataTable ">

    
    <tr>
      <th colspan="7" class="table_divider">Equity</th>
    </tr>
    <%= render "investments/index_header" %>
    <% investments.not_debt.each do |investment| %>
      <%= render investment %>
    <% end %>

    <tr>
      <th colspan="7" class="table_divider">Debt</th>
    </tr>
    <%= render "investments/index_header" %>
    <% investments.debt.each do |investment| %>
      <%= render investment %>
    <% end %>

  </table>

</div>