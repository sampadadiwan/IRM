<div data-controller="datatable">
    <div class="col-lg-12 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">ESOPs</h6>
            </div>
            <div class="card-body">
                <%= render "/holdings/esop_summary", holdings: current_user.holdings.options %>
            </div>
        </div>
    </div>
    <div class="row associated_entity">

        <div class="col-lg-6 mb-4">
            <%= render "/holdings/employee_calc" %>
        </div>

        <% 
            entity_id = params[:entity_id].presence || current_user.employee_parent_entity&.id
            entity = Entity.find(entity_id)
        %>

        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Projected Profits</h6>
                </div>
                <div class="card-body">
                    <%= projected_profits_chart(params, current_user, entity)  %>
                </div>
            </div>
        </div>

    </div>
    <div>
        <div class="associated_entity">
            <%= render "/excercises/index", excercises: current_user.excercises %>
        </div>
    </div>

</div>