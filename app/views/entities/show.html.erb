<p style="color: green;text-align: center"><%= notice %></p>

<div class="card shadow mb-4">

   <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary"><%= link_to @entity.name, @entity %></h6>
   </div>

   <div class="card-body">

      <table class="table table-bordered dataTable ">
         <tr>
            <td>
               Url
            </td>
            <td>
               <%= @entity.url if @entity.url.present? %>
            </td>
         </tr>
         <tr>
            <td>
               Category
            </td>
            <td>
               <%= @entity.category %>
            </td>
         </tr>
         <tr>
            <td>
               Details
            </td>
            <td>
               <%= @entity.details %>
            </td>
         </tr>
      </table>
      <% if current_user.entity_id == @entity.id %>
      <div>
         <%= link_to "Edit", edit_entity_path(@entity), {class: "btn btn-primary"} %> |
         <%= button_to "Delete", @entity, method: :delete, class: "btn btn-danger", form_class: "deleteButton" %>
      </div>
      <% end %>
      <% 
         investor = Investor.where(investee_entity_id: @entity.id, investor_entity_id: current_user.entity_id).first
         if investor.present? 
      %>
         <%= button_to "Request Access", request_access_investor_accesses_path("investor_access[investor_id]": investor.id), class: "btn btn-success" %> 
      <% end %>
   </div>
</div>

