
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Documents</h1>
  <%= link_to "New Document", new_document_path, {class: "btn btn-primary"} %>

</div>

<table id="documents" class="table table-bordered dataTable">

  <tr>
    <th>
      Name
    </th>
    <th>
      Created On
    </th>
    <th>
      Owner
    </th>
  
  </tr>

  <% documents.each do |document| %>
    <%= render document %>
  <% end %>
</table>

