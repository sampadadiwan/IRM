
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">
    Documents
    <%= params[:folder_id].present? ? "in " + Folder.find(params[:folder_id]).full_path : "" %>
  </h1>
  <%= link_to "New Document", 
      new_document_path("document[entity_id]":current_user.entity_id, "document[folder_id]": params[:folder_id]), 
      {class: "btn btn-primary"} if current_user.entity_id == entity.id %>

</div>

<div class="table-responsive">

  <table id="documents" class="table table-bordered table-striped dataTable ">

    <tr>
      <th>
        Name
      </th>
      <th>
        Folder
      </th>
      <th class="hideMobP">
        Tags
      </th>
      <th class="hideMobP">
        Created On
      </th>
    
    </tr>

    <% documents.each do |document| %>
      <%= render partial: "documents/document", locals: {document: document} %>
    <% end %>
  </table>

</div>