<tr id="<%= dom_id deal_investor %>">
    <td>
        <% if deal_investor.entity_id == current_user.entity_id %>
        <%= link_to deal_investor.deal_name, deal_investor.deal %>
        <% else %>
        <%= deal_investor.deal_name %>
        <% end %>
        
    </td>
    <td>
        <%= l deal_investor.deal.start_date if deal_investor.deal.start_date  %>
    </td>
    <td>
        <%= link_to deal_investor.investor_name, deal_investor %>
        <div>
            <span class="badge <%= status_badge(deal_investor) %>">
                <%= deal_investor.status %>
            </span>
        </div>
    </td>
    <td>
        <%= number_to_currency deal_investor.primary_amount %>
    </td>
    <td>
        <%= number_to_currency deal_investor.secondary_investment %>
    </td>
    <td class="">
        <%= deal_investor.entity_name %>
    </td>
</tr>