<%= render "/layouts/alerts" %>

<%= render "deal_investors/show", deal_investor: @deal_investor %>

<% if current_user.entity_id == @deal_investor.entity_id %>
<div>

  <% if current_user.entity_id == @deal_investor.entity_id %>
    <%= link_to "Add Investor", new_deal_investor_path("deal_investor[deal_id]": @deal_investor.deal_id, "deal_investor[entity_id]": @deal_investor.entity_id) , {class: "btn btn-success"}%> |
  <% end %>  
  <%= link_to "Edit", edit_deal_investor_path(@deal_investor), {class: "btn btn-primary"} %> |
  <%= button_to "Delete", @deal_investor, method: :delete, class: "btn btn-danger", form_class: "deleteButton", data: {action: "click->confirm#delete", turbo:false}  %>
</div>
<% end %>

<%= render "/layouts/steps", steps: ["Setup Investor Details", "Upload Deal Docs", 
            "View Deal Steps", "Chat / Manage Tasks"].freeze if current_user.has_cached_role?(:startup) %>

<%= render "deal_investors/deal_investor_details", 
  deal_investor: @deal_investor, deal: @deal_investor.deal, show_tranch: false %>