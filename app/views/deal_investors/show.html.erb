<%= render "/layouts/alerts" %>

<%= render "deal_investors/show", deal_investor: @deal_investor %>

<% if current_user.entity_id == @deal_investor.entity_id %>
<div>
  <%= link_to "Edit", edit_deal_investor_path(@deal_investor), {class: "btn btn-primary"} %> |
  <%= button_to "Delete", @deal_investor, method: :delete, class: "btn btn-danger", form_class: "deleteButton" %>
</div>
<% end %>

<%= render "deal_investors/deal_investor_details", 
  deal_investor: @deal_investor, deal: @deal_investor.deal, show_tranch: false %>