<%= render "/layouts/alerts" %>

  <table class="table table-bordered dataTable">

    <tr>
      <td>
        Entity
      </td>
      <td>
        <%= @share_transfer.entity.name %>
      </td>
    </tr>

    <tr>
      <td>
        Type
      </td>
      <td>
        <%= @share_transfer.transfer_type %>
      </td>
    </tr>

    <% if @share_transfer.from_investment %>
    <tr>
      <td>
        From Investor
      </td>
      <td>
        <%= @share_transfer.from_investor&.investor_name %>
      </td>
    </tr>
    <tr>
      <td>
        From Investment
      </td>
      <td>
        <%= link_to "Investment #{@share_transfer.from_investment_id}" , investment_path(id:
          @share_transfer.from_investment_id) %>
      </td>
    </tr>
    <tr>
      <td>
        From Quantity
      </td>
      <td>
        <%= @share_transfer.quantity %>
      </td>
    </tr>
    <% end %>

    <% if @share_transfer.from_holding %>
    <tr>
      <td>
        From User
      </td>
      <td>
        <%= @share_transfer.from_holding.user.full_name %>
      </td>
    </tr>
    <tr>
      <td>
        From Holding
      </td>
      <td>
        <%= link_to "Holding #{@share_transfer.from_holding_id}" , holding_path(id:
          @share_transfer.from_holding_id) %>
      </td>
    </tr>
    <tr>
      <td>
        From Quantity
      </td>
      <td>
        <%= @share_transfer.quantity %>
      </td>
    </tr>
    <% end %>

    
    <% if @share_transfer.to_investment %>
    <tr>
      <td>
        To Investor
      </td>
      <td>
        <%= @share_transfer.to_investor.investor_name %>
      </td>
    </tr>
    <tr>
      <td>
        To Investment
      </td>
      <td>
        <%= link_to "Investment #{@share_transfer.to_investment_id}" , investment_path(id:
          @share_transfer.to_investment_id) %>
      </td>
    </tr>
    <tr>
      <td>
        To Quantity
      </td>
      <td>
        <%= @share_transfer.to_quantity %>
      </td>
    </tr>
    <% end %>

    <% if @share_transfer.to_holding %>
    ent %>
    <tr>
      <td>
        To User
      </td>
      <td>
        <%= @share_transfer.to_user.full_name %>
      </td>
    </tr>
    <tr>
      <td>
        To Holding
      </td>
      <td>
        <%= link_to "Holding #{@share_transfer.to_holding_id}" , holding_path(id:
          @share_transfer.to_holding_id) %>
      </td>
    </tr>
    <tr>
      <td>
        To Quantity
      </td>
      <td>
        <%= @share_transfer.to_quantity %>
      </td>
    </tr>
    <% end %>


    <tr>
      <td>
        Price
      </td>
      <td>
        <%= @share_transfer.price %>
      </td>
    </tr>
    <tr>
      <td>
        Transfer Date
      </td>
      <td>
        <%= @share_transfer.transfer_date %>
      </td>
    </tr>
    <tr>
      <td>
        Transfered By
      </td>
      <td>
        <%= @share_transfer.transfered_by.full_name %>
      </td>
    </tr>


  </table>