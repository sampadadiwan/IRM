<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Reminders</h1>
</div>

<div class="table-responsive" data-controller="datatable">

    <table id="reminders" class="table table-bordered dataTable">
        <thead>
            <tr>
                <th>
                    Unit
                </th>
                <th>
                    Count
                </th>
                <th>
                    Sent
                </th>

                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            <% reminders.each do |reminder| %>
                <%= render reminder %>
            <% end %>
        </tbody>
    </table>

</div>