<% if @message.not_msg %>
    <%= turbo_stream.replace('new_task_message', partial: "messages/new_task",
                            locals: { message: Message.new(owner_id: @message.owner_id, 
                                                owner_type: @message.owner_type) }) %>


    <%= turbo_stream.prepend('tasks_body', partial: "messages/message",
                            locals: { message: @message })  %>

<% else %>
    <%= turbo_stream.replace('new_message', partial: "messages/new",
                            locals: { message: Message.new(owner_id: @message.owner_id, 
                                            owner_type: @message.owner_type) }) %>

<% end %>