<p style="color: green"><%= notice %></p>

<table class="table table-bordered dataTable">

      <tr>
        <td>
          Investor
        </td>
        <td>
          <%= @note.investor.investor_name %>
        </td>    
      </tr>
    
       <tr>
        <td>
          Details
        </td>
        <td>
          <%= @note.details %>
          On: <%= l @note.updated_at %>
        </td>    
      </tr>
  
</table>


<div>
  <%= link_to "Edit", edit_note_path(@note), {class: "btn btn-primary"} %> |
  <%= link_to "Back", notes_path, {class: "btn btn-primary"} %> |

  <%= button_to "Delete", @note, method: :delete, class: "btn btn-danger", form_class: "deleteButton" %>
</div>
