upstream puma_IRM_<%= fetch(:stage) %> {
  server unix:///home/ubuntu/IRM/shared/tmp/sockets/IRM-puma.sock;
  # server 0.0.0.0:3000;
}

server {
  listen 80;
  server_tokens off;
  server_name localhost IRM.local;
  root /home/ubuntu/IRM/current/public;
  try_files $uri/index.html $uri @puma_IRM_<%= fetch(:stage) %>;

  client_max_body_size 4G;
  keepalive_timeout 10;

  error_page 500 502 504 /500.html;
  error_page 503 @503;

  location @puma_IRM_<%= fetch(:stage) %> {
    proxy_http_version 1.1;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Host $host;
    proxy_redirect off;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "Upgrade";
      proxy_set_header X-Forwarded-Proto https;
      proxy_set_header X-Forwarded-Ssl on;
      proxy_pass http://puma_IRM_<%= fetch(:stage) %>;
    access_log /home/ubuntu/IRM/shared/log/nginx.access.log;
    error_log /home/ubuntu/IRM/shared/log/nginx.error.log;
  }

  location ^~ /vendor/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  location ^~ /css/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  location = /50x.html {
    root html;
  }

  location = /404.html {
    root html;
  }

  location @503 {
    error_page 405 = /system/maintenance.html;
    if (-f $document_root/system/maintenance.html) {
      rewrite ^(.*)$ /system/maintenance.html break;
    }
    rewrite ^(.*)$ /503.html break;
  }

  if ($request_method !~ ^(GET|HEAD|PUT|PATCH|POST|DELETE|OPTIONS)$ ){
    return 405;
  }

  if (-f $document_root/system/maintenance.html) {
    return 503;
  }

}